<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_new</item>
        <item name="android:statusBarColor">@color/splash_background</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.HEMobile" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->s
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_color</item>
        <item name="android:colorAccent">@color/blue_color</item>
        <item name="backgroundColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CreateAccount" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HEMobileWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_color</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.HEMobileDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/tool_bar_clr</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_color</item>
    </style>

    <style name="Theme.HEMobileLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_color</item>
        <item name="colorPrimaryDark">@color/blue_color</item>
        <item name="colorOnPrimary">@color/blue_color</item>
        <item name="colorAccent">@color/blue_color</item>
    </style>

    <style name="Theme.ToolBar" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.HeMobile.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_white_selector</item>
        <item name="android:textColorHint">@color/color_909090</item>
        <item name="hintTextColor">@color/dark_blue_color</item>
        <item name="passwordToggleTint">@color/edit_text_white_selector</item>
    </style>

    <style name="Widget.HeMobile.TextInputLayoutDrop" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.HeMobile.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="TextAppearance.HeMobile.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.HeMobile.Body2.HintText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/blue_color</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>


    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">#9E9E9E</item>
    </style>

    <style name="Dialog.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Button" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/button_shadow</item>
        <item name="colorButtonNormal">@color/grey_two</item>
        <item name="colorControlActivated">@color/blue_color</item>
        <item name="backgroundTint">@color/color_C9C9C9</item>
        <item name="android:height">@dimen/_40sdp</item>
    </style>


    <style name="formInputLayoutNormal" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextAppearance">@style/form_text_hint_size</item>
        <item name="endIconMode">clear_text</item>
    </style>


    <style name="form_text_hint_size" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColorHint">@color/form_text_hint</item>

    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToggleSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue_color</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FFFFFF</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#000000</item>
    </style>

    //Rebranding

    <style name="Widget.HeMobile.TextInputLayout.Transparent" parent="ThemeOverlay.AppTheme.TextInputEditText.Outlined">
        <item name="boxStrokeColor">@color/edit_text_selector</item>
