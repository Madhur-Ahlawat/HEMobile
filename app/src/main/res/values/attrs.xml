<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomNavigationView">
        <attr name="menu" format="reference" />
        <attr name="item_padding" format="dimension" />
        <attr name="item_text_size" format="dimension" />
        <attr name="active_color" format="color" />
        <attr name="passive_color" format="color" />
        <attr name="pressed_color" format="color" />
        <attr name="animation_duration" format="integer" />
        <attr name="scale_percent" format="integer" />
    </declare-styleable>

    <declare-styleable name="NHTextInputStyle">
        <attr name="headingText" format="string" />
        <attr name="hintText" format="string" />
        <attr name="input_text" format="string" />
        <attr name="errorText" format="string" />
        <attr name="placeholderText" format="string"/>
    </declare-styleable>



    <declare-styleable name="NHTextCellStyle">
        <attr name="text" format="string" />
        <attr name="titleText" format="string" />
    </declare-styleable>



    <declare-styleable name="NHButtonStyle">
        <attr format="boolean" name="isPrimary"/>
        <attr name="shape"/>
        <attr name="gradientAngle"/>
        <attr name="borderWidth_"/>
        <attr name="radius"/>
        <attr name="borderColor"/>
        <attr name="backgroundColor"/>
        <attr name="backgroundColorPressed"/>
        <attr name="gradientStartColor"/>
        <attr name="gradientEndColor"/>
        <attr name="drawableCenter"/>
        <attr name="isEnabled"/>
    </declare-styleable>


</resources>