<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.MaterialToolbar
            layout="@layout/tool_bar_with_title_back"
            android:layout_width="match_parent"
            android:id="@+id/id_tool_bar_lyt"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:elevation="3dp"
            android:translationZ="2dp"
            android:theme="@style/Theme.ToolBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/ic_back_arrow_white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_backText"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:tint="@color/white"
                    android:text="Back"
                    app:fontFamily="@font/sfbold"
                    android:visibility="gone"
                    android:textSize="17sp"
                    android:fontFamily="@font/sfregular"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_back_arrow" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans_semibold"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="@string/str_make_one_of_payment" />


            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_tool_bar_lyt"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:defaultNavHost="true"
            android:layout_marginBottom="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
            app:layout_constraintTop_toBottomOf="@+id/id_tool_bar_lyt"
            app:navGraph="@navigation/bottom_navigation_graph" />

        <com.conduent.nationalhighways.ui.customviews.BottomNavigationView
            android:orientation="horizontal"
            app:active_color="@color/dark_blue_color"
            app:passive_color="@color/bottomPassiveColor"
            app:pressed_color="@color/dark_blue_color"
            app:item_text_size="@dimen/_10ssp"
            app:item_padding="@dimen/_4sdp"
            app:animation_duration="300"
            app:scale_percent="5"
            android:elevation="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_navigation_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_navigation" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>