<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/color_EFEFEF"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar_with_logo"
            android:layout_width="match_parent"
            android:id="@+id/id_tool_bar_lyt"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/he_bg"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_tool_bar_lyt"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:defaultNavHost="true"
            android:layout_marginBottom="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
            app:layout_constraintTop_toBottomOf="@+id/id_tool_bar_lyt"
            app:navGraph="@navigation/bottom_navigation_graph" />

        <com.heandroid.ui.customviews.BottomNavigationView
            android:orientation="horizontal"
            app:active_color="@color/dark_blue_color"
            app:passive_color="@color/bottomPassiveColor"
            app:pressed_color="@color/dark_blue_color"
            app:item_text_size="@dimen/_10ssp"
            app:item_padding="@dimen/_4sdp"
            app:animation_duration="300"
            app:scale_percent="5"
            android:elevation="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_navigation_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_navigation" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>