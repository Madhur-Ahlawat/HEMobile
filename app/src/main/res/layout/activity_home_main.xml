<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:contentInsetStart="@dimen/margin_0dp"
            android:contentInsetLeft="@dimen/margin_0dp"
            android:contentInsetRight="@dimen/margin_0dp"
            android:contentInsetEnd="@dimen/margin_0dp"
            app:contentInsetLeft="@dimen/margin_0dp"
            app:contentInsetStart="@dimen/margin_0dp"
            app:contentInsetRight="@dimen/margin_0dp"
            app:contentInsetEnd="@dimen/margin_0dp"
            android:id="@+id/id_tool_bar_lyt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/white"
            android:elevation="3dp"
            android:theme="@style/Theme.ToolBar"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/margin_48dp"
                    android:layout_height="@dimen/margin_48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/str_back"
                    android:padding="@dimen/margin_11dp"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/ic_back_arrow_white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_backText"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_back_arrow"
                    android:fontFamily="@font/sfregular"
                    android:text="@string/str_back"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:tint="@color/white"
                    android:visibility="gone"
                    app:fontFamily="@font/sfbold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans_semibold"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="@string/str_make_one_of_payment" />


            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_tool_bar_lyt" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:visibility="visible"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_tool_bar_lyt"
            app:navGraph="@navigation/bottom_navigation_graph" />

        <com.conduent.nationalhighways.ui.customviews.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/_10sdp"
            android:orientation="horizontal"
            app:active_color="@color/blue_color"
            app:animation_duration="300"
            app:item_padding="@dimen/_4sdp"
            app:item_text_size="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_navigation"
            app:passive_color="@color/bottomPassiveColor"
            app:pressed_color="@color/blue_color"
            app:scale_percent="5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>