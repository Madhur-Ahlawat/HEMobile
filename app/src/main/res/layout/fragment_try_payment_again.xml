<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="18dp"
        android:paddingEnd="20dp"
        android:paddingBottom="18dp"
        tools:context=".ui.account.creation.newAccountCreation.TryPaymentAgainFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tryPaymentAgain">

            <ImageView
                android:id="@+id/warningIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/warningicon" />

            <TextView
                android:id="@+id/title_tv"
                style="@style/BoldText"
                android:textStyle="bold"
                android:text="@string/str_your_payment_has_been_declined"
                android:textColor="@color/dark_blue_color"
                android:layout_marginTop="@dimen/margin_35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/warningIcon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:layout_marginTop="@dimen/margin_20dp"
                android:text="@string/str_contact_your_bank_for_more_details"
                android:textColor="@color/black"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_tv"
                android:textSize="14sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.conduent.apollo.ui.CMButton
            android:id="@+id/tryPaymentAgain"
            style="@style/PrimaryButton"
            android:layout_marginBottom="@dimen/margin_15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cancelPayment"
            android:text="@string/str_try_again" />
        <com.conduent.apollo.ui.CMButton
            android:id="@+id/cancelPayment"
            style="@style/secondaryButton"
            android:layout_marginBottom="@dimen/margin_30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/cancel" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>