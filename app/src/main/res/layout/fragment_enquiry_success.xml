<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/margin_20dp"
        tools:context=".ui.bottomnav.account.raiseEnquiry.EnquirySuccessFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/success_iv"
                android:layout_width="@dimen/margin_70dp"
                android:layout_height="@dimen/margin_70dp"
                android:src="@drawable/tick_mark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/dark_blue_color" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/title_tv"
                style="@style/SemiBoldTextBlack"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center"
                android:text="@string/str_Your_enquiry_submitted"
                android:textSize="@dimen/font_18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/success_iv" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/desc_tv"
                style="@style/RegularTextBlack"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center"
                android:text="@string/sent_email"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_tv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/reference_number_cv"
                style="@style/cardView_style"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/desc_tv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/category_tv"
                        style="@style/SemiBoldTextBlack"
                        android:layout_width="@dimen/margin_0dp"
                        android:text="@string/reference_number"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/reference_number_tv"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/category_tv" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/what_happens_next_tv"
                style="@style/SemiBoldTextBlack"
                android:layout_width="@dimen/margin_0dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:text="@string/what_happens_next"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reference_number_cv" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/respond_enquiry_tv"
                style="@style/RegularTextBlack"
                android:layout_width="@dimen/margin_0dp"
                android:layout_marginTop="@dimen/margin_5dp"
                tools:text="@string/respond_enquiry_1day"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/what_happens_next_tv" />

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/btnNext"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:text="@string/str_go_to_start_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/respond_enquiry_tv"
                app:radius="@dimen/margin_5dp" />


            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/check_status_bt"
                style="@style/secondaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnNext"
                app:radius="@dimen/margin_5dp" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>