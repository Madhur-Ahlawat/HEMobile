<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="18dp"
            android:paddingEnd="20dp"
            android:paddingBottom="18dp"
            tools:context=".ui.account.creation.newAccountCreation.MaximumVehicleNumberFragment">

            <ImageView
                android:id="@+id/warningIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:src="@drawable/checkicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/maximumVehicleAdded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/str_payment_method_deleted"
                android:textColor="@color/new_btn_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/warningIcon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/maximumVehicleAdded"
                android:text="@string/str_you_must_pay"
                android:lineSpacingExtra="2dp"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:layout_marginTop="17dp"
                android:textSize="14sp"
                android:id="@+id/textMaximumVehicle" />



            <com.conduent.apollo.ui.CMButton
                style="@style/PrimaryButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cancel_btn"
                android:text="@string/str_continue"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="@dimen/margin_70dp"
                android:id="@+id/btnContinue"/>

            <com.conduent.apollo.ui.CMButton
                style="@style/secondaryButton"
                app:layout_constraintBottom_toTopOf="@+id/feedback_bt"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/add_new_payment_method"
                android:layout_marginBottom="@dimen/_26dp"

                android:id="@+id/cancel_btn"
                />
            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/feedback_bt"
                style="@style/secondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/new_btn_color"
                app:borderColor="@color/new_btn_color"
                android:textColorLink="@color/new_btn_color"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_30dp"
                android:text="@string/feed_back_to_improve_service"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>