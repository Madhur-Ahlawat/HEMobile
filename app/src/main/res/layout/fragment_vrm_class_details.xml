<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">

        <include
            android:id="@+id/id_tool_bar_lyt"
            layout="@layout/activity_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/_10sdp"
            android:text="Vehicle registration number: AB4 195"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintTop_toBottomOf="@+id/id_tool_bar_lyt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/classVehicleCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:gravity="start"
            android:text="I declare that the information given above is correct"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classDView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/roboto_bold"
            android:backgroundTint="@color/green"
            android:text="@string/str_continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classVehicleCheckbox" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:includeFontPadding="true"
            android:text="@string/str_cancel"
            android:textAllCaps="false"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/continue_button"
            app:strokeColor="@color/green" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/classAView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/classA_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                app:buttonTint="@color/bottomActiveColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvclassA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_class_a"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/classA_RadioButton"
                app:layout_constraintTop_toTopOf="@+id/classA_RadioButton"
                app:layout_constraintVertical_bias="0.547" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/grey_two"
                android:fontFamily="@font/roboto_light"
                android:text="@string/str_motorcycles_quadcycles"
                app:layout_constraintBottom_toBottomOf="@+id/classA_RadioButton"
                app:layout_constraintStart_toStartOf="@+id/tvclassA" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/tvclassA"
                app:srcCompat="@drawable/ic_class_a" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/classBView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classAView">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/classB_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                app:buttonTint="@color/bottomActiveColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvClassB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_class_b"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toTopOf="@+id/classBSub"
                app:layout_constraintStart_toEndOf="@+id/classB_RadioButton"
                app:layout_constraintTop_toTopOf="@+id/classB_RadioButton"
                app:layout_constraintVertical_bias="0.547" />

            <TextView
                android:id="@+id/classBSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_goods_vans_car_based_vans"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/grey_two"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="@+id/classB_RadioButton"
                app:layout_constraintStart_toStartOf="@+id/tvClassB" />

            <ImageView
                android:id="@+id/classBType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintBottom_toTopOf="@+id/classBType2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/classBSub"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_class_b_first" />

            <ImageView
                android:id="@+id/classBType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/classBSub"
                app:layout_constraintTop_toBottomOf="@+id/classBType1"
                app:srcCompat="@drawable/ic_class_b_first" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/classBDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:background="#eceff1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classBView">

            <TextView
                android:id="@+id/classBDesc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:text="@string/str_cars_with_or_without"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/classBDesc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_light"
                android:text="@string/str_Motorhomes_passengers_vans"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/classBDesc1" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/classCView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classBDesc">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/classC_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:buttonTint="@color/bottomActiveColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvClassC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_class_c"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toTopOf="@+id/classCSub"
                app:layout_constraintStart_toEndOf="@+id/classC_RadioButton"
                app:layout_constraintTop_toTopOf="@+id/classC_RadioButton"
                app:layout_constraintVertical_bias="0.547" />

            <TextView
                android:id="@+id/classCSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_two"
                android:fontFamily="@font/roboto_light"
                android:textSize="@dimen/_14ssp"
                android:text="@string/str_axles_vehicles"
                app:layout_constraintBottom_toBottomOf="@+id/classC_RadioButton"
                app:layout_constraintStart_toStartOf="@+id/tvClassC" />

            <ImageView
                android:id="@+id/classCType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="@+id/tvClassC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/classCSub"
                app:layout_constraintTop_toTopOf="@+id/tvClassC"
                app:srcCompat="@drawable/ic_class_c" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/classDView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classCView">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/classD_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:buttonTint="@color/bottomActiveColor"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvClassD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_class_d"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toTopOf="@+id/classDSub"
                app:layout_constraintStart_toEndOf="@+id/classD_RadioButton"
                app:layout_constraintTop_toTopOf="@+id/classD_RadioButton"
                app:layout_constraintVertical_bias="0.547" />

            <TextView
                android:id="@+id/classDSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/grey_two"
                android:fontFamily="@font/roboto_light"
                android:text="@string/str_2_plus_axles"
                app:layout_constraintBottom_toBottomOf="@+id/classD_RadioButton"
                app:layout_constraintStart_toStartOf="@+id/tvClassD" />

            <ImageView
                android:id="@+id/classDType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="@+id/tvClassD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/classDSub"
                app:layout_constraintTop_toTopOf="@+id/tvClassD"
                app:srcCompat="@drawable/ic_class_d" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center"
            android:visibility="gone">

            <!--progress bar implementation-->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circular_shape"
                android:foregroundGravity="center"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <!--Text implementation in center of the progress bar-->
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Loading..."
                android:textColor="@android:color/darker_gray"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>