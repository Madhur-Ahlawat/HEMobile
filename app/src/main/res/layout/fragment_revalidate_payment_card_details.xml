<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.revalidatePayment.RevalidatePaymentCardDetailsFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="@dimen/margin_20dp">

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="start"
                    android:text="@string/str_revalidate_provide_payment_card_details"
                    android:textColor="@color/new_btn_color"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/descTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:lineSpacingExtra="@dimen/margin_2dp"
                    android:text="@string/str_to_continue_use_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titleTv" />


                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/desc2Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="start"
                    android:text="@string/str_which_card_want_to_use"
                    android:textColor="@color/new_btn_color"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descTv" />


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioExistingCard"
                    style="@style/RadioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:checked="false"
                    android:contentDescription=""
                    android:minHeight="@dimen/margin_48dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/desc2Tv"
                    tools:text="@string/str_your_existing_card" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radioExistingCard">

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:orientation="vertical">

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="start"
                            android:text="@string/str_enter_the_card_security_code"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_16sp" />

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:fontFamily="@font/open_sans"
                            android:gravity="start"
                            android:lineSpacingExtra="@dimen/margin_2dp"
                            android:text="@string/str_last_3_4_digits_back_card"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_16sp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>