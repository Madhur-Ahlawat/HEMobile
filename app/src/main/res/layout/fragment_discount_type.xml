<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="enable"
            type="Boolean" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_20dp"
            android:paddingBottom="@dimen/margin_16dp"

            >

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/MediumTextBlack"
                android:id="@+id/what_type_of_account"
                android:text="@string/str_what_type_of_local" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RegularTextBlack"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="@string/str_under_the_local_resident"
                app:layout_constraintTop_toBottomOf="@id/what_type_of_account"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/localResisdent" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:layout_constraintTop_toBottomOf="@id/localResisdent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginStart="@dimen/margin_2dp"
                android:layout_marginEnd="@dimen/margin_2dp"
                android:layout_marginBottom="@dimen/margin_2dp"
                android:elevation="@dimen/margin_2dp"
                app:cardCornerRadius="@dimen/margin_5dp"
                android:id="@+id/prePayCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_limited"
                        style="@style/MediumTextBlack"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/margin_12dp"
                        android:layout_marginStart="@dimen/margin_19dp"
                        android:id="@+id/prePay" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:layout_marginEnd="@dimen/margin_19dp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/textView1"
                        style="@style/RegularTextBlack"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="@dimen/margin_20dp"
                        android:drawableStart="@drawable/circle_5dp"
                        android:drawablePadding="@dimen/margin_20dp"
                        android:layout_marginTop="@dimen/margin_15dp"

                        android:text="@string/str_limited_discount_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/prePay" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:layout_constraintTop_toBottomOf="@id/prePayCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginStart="@dimen/margin_2dp"
                android:layout_marginEnd="@dimen/margin_2dp"
                android:layout_marginBottom="@dimen/margin_2dp"
                android:elevation="@dimen/margin_2dp"
                app:cardCornerRadius="@dimen/margin_5dp"

                android:id="@+id/payCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_unlimited"
                        style="@style/MediumTextBlack"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/margin_12dp"
                        android:layout_marginStart="@dimen/margin_19dp"
                        android:id="@+id/payAsYouGo" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:layout_marginEnd="@dimen/margin_19dp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/payTextView1"
                        style="@style/RegularTextBlack"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="@dimen/margin_20dp"
                        android:drawableStart="@drawable/circle_5dp"
                        android:drawablePadding="@dimen/margin_20dp"
                        android:layout_marginTop="@dimen/margin_15dp"

                        android:text="@string/str_unlimited_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/payAsYouGo" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/crossingCharges"
                style="@style/secondaryButton"
                android:text="@string/str_i_do_not_want_discount"
                app:layout_constraintTop_toBottomOf="@id/payCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginStart="@dimen/margin_2dp"
                android:layout_marginEnd="@dimen/margin_2dp"
                android:layout_marginBottom="@dimen/margin_2dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</layout>