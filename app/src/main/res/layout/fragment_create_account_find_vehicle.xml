<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isEnable"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingEnd="@dimen/margin_20dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_can_pay_for_crossings_without_an_account_to"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_reference_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/payment_reference_number"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold" />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edit_reference_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            style="@style/input_text"
            android:visibility="gone"
            app:inputType="text"
            app:imeOptions="actionDone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reference_number_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/for_example_hd542321725_or_1_898008009"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="14sp"
            android:gravity="start"
            android:fontFamily="@font/open_sans" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/pay_for_crossings_you_ve_made_since_yesterday_pay_for_future_crossings"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="@color/grayColorIcon"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_the_vehicle_registration_number_plate_of_the_vehicle"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold" />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edit_number_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            style="@style/input_text"
            app:maxLength="10"
            android:maxLength="10"
            app:inputType="text"
            app:imeOptions="actionDone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/belowHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/for_example_cu57abc"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="start"
            android:fontFamily="@font/open_sans" />

        <com.conduent.apollo.ui.CMButton
            android:id="@+id/findVehicle"
            android:layout_marginTop="@dimen/_20sdp"
            app:isEnabled="false"
            style="@style/PrimaryButton"
            android:text="@string/str_continue"
            app:layout_goneMarginTop="@dimen/margin_30dp"/>


    </LinearLayout>

</layout>