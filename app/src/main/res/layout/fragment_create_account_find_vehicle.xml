<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isEnable"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingEnd="@dimen/margin_20dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_can_pay_for_crossings_without_an_account_to"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_reference_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/payment_reference_number"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold" />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edit_reference_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            style="@style/input_text"
            android:visibility="gone"
            app:inputType="text"
            app:imeOptions="actionDone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reference_number_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/for_example_hd542321725_or_1_898008009"
            android:textColor="@color/black"
            android:visibility="gone"
            tools:visibility="visible"
            android:textSize="14sp"
            android:gravity="start"
            android:fontFamily="@font/open_sans" />

        <LinearLayout
            android:id="@+id/titleText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/margin_20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:src="@drawable/circle_5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_7dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/str_pay_for_crossing_numberplate_point1"
                android:textColor="@color/grayColorIcon"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/titleText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:src="@drawable/circle_5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_7dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/str_pay_for_crossing_numberplate_point2"
                android:textColor="@color/grayColorIcon"
                android:textSize="14sp" />

        </LinearLayout>




        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_the_vehicle_registration_number_plate_of_the_vehicle"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold" />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edit_number_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            style="@style/input_text"
            app:counterMaxLength="10"
            android:maxLength="10"
            android:inputType="textCapCharacters"
            app:imeOptions="actionDone"
            android:textAllCaps="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/belowHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/for_example_cu57abc"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="start"
            android:fontFamily="@font/open_sans" />

        <com.conduent.apollo.ui.CMButton
            android:id="@+id/findVehicle"
            android:layout_marginTop="@dimen/_20sdp"
            app:isEnabled="false"
            style="@style/PrimaryButton"
            android:text="@string/str_continue"
            app:layout_goneMarginTop="@dimen/margin_30dp"/>

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/cancel_bt"
            style="@style/secondaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/_23dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/cancel"
            app:radius="5dp" />

    </LinearLayout>

</layout>