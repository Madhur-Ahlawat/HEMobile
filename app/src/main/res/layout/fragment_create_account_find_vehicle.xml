    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingEnd="@dimen/margin_20dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_the_vehicle_registration_number_plate_of_the_vehicle"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edit_number_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            style="@style/input_text"
            app:maxLength="10"
            app:inputType="text"
            app:imeOptions="actionDone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_details_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/belowHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/for_example_cu57abc"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="start"
            android:fontFamily="@font/open_sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_number_plate" />

        <com.conduent.apollo.ui.CMButton
            android:id="@+id/findVehicle"
            android:layout_marginTop="@dimen/_20sdp"
            app:isEnabled="false"
            style="@style/PrimaryButton"
            android:text="@string/str_continue"
            app:layout_goneMarginTop="@dimen/margin_30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/belowHint"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>