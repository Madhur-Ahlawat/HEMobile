<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_10ssp"
            android:layout_marginVertical="@dimen/_5ssp"
            android:background="@drawable/border_red_square"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/problemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15ssp"
                android:text="@string/card_details"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/addYourCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp"
                android:text="@string/add_your_card"
                android:layout_marginBottom="@dimen/_10ssp"
                android:textColor="@color/color_E30000"
                android:layout_marginHorizontal="15dp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retry_payment"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="@dimen/_15ssp"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:text="@string/retry"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@+id/cancel_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_payment"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="84dp"
            android:backgroundTint="#C9C9C9"
            android:gravity="center"
            android:text="@string/not_now"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>