<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.conduent.nationalhighways.data.model.raiseEnquiry.ServiceRequest" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/category_cv"
            style="@style/cardView_style"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/category_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_15dp">


                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/category_tv"
                    style="@style/SemiBoldTextBlack"
                    android:gravity="start"
                    android:text="@string/reference_number"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/barrier1"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/category_data_tv"
                    style="@style/SemiBoldTextBlack"
                    android:gravity="start"
                    android:text="@string/str_status"
                    android:layout_marginTop="@dimen/margin_3dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_tv" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/reference_number_tv"
                    style="@style/RegularTextBlack"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:text="@{viewModel.id}"
                    app:layout_constraintLeft_toRightOf="@id/barrier1"
                    app:layout_constraintRight_toLeftOf="@id/barrier"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/status_tv"
                    style="@style/RegularTextBlack"
                    android:layout_width="0dp"
                    android:gravity="right"
                    app:textAllCaps="true"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:text="@{viewModel.status}"
                    app:layout_constraintLeft_toRightOf="@id/barrier1"
                    app:layout_constraintRight_toLeftOf="@id/barrier"
                    app:layout_constraintTop_toBottomOf="@id/category_tv" />


                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="category_data_tv,category_tv" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="left"
                    app:constraint_referenced_ids="category_edit_iv" />

                <ImageView
                    android:id="@+id/category_edit_iv"
                    android:layout_width="@dimen/margin_30dp"
                    android:layout_height="@dimen/margin_0dp"
                    android:paddingLeft="@dimen/margin_20dp"

                    android:src="@drawable/icon_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/barrier"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>