<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_16dp"
        android:paddingEnd="@dimen/margin_20dp"
        android:paddingBottom="20dp"
        >

        <TextView
            android:id="@+id/txtHeading"
            style="@style/MediumTextBlack"
            android:layout_width="0dp"
            android:text="@string/what_is_your_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.apollo.ui.CMTextInput
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:labelText="@string/txt_postcode"
            style="@style/input_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHeading" />

        <TextView
            android:id="@+id/txtThisShouldBeVehicle"
            style="@style/RegularTextBlack"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="@string/str_address_example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <com.conduent.apollo.ui.CMTextInput
            android:id="@+id/address2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:labelText="@string/str_address_line2"
            style="@style/input_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtThisShouldBeVehicle" />

        <com.conduent.apollo.ui.CMTextInput
            android:id="@+id/townCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:labelText="@string/str_town_city"
            style="@style/input_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address2" />

        <com.conduent.apollo.ui.CMTextInput
            android:id="@+id/postCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:labelText="@string/postcode"
            style="@style/input_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/townCity" />

        <com.conduent.apollo.ui.CMDropDownView
            android:id="@+id/country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:labelText="@string/str_country"
            style="@style/input_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postCode" />



        <com.conduent.apollo.ui.CMButton
            android:id="@+id/btnFindAddress"
            style="@style/PrimaryButton"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/margin_40dp"
            android:layout_height="wrap_content"
            android:text="@string/find_address"
            app:isEnabled="false"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/country"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</layout>