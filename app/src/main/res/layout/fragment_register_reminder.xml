<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.landing.RegisterReminderFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_20dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="none"
                android:layout_marginBottom="@dimen/margin_20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/continueBt">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/desc_tv"
                        style="@style/RegularText"
                        android:text="@string/str_register_reminders"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/always_desc_tv"
                        style="@style/RegularText"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/str_register_reminders_desc"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/desc_tv" />


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchGeoLocation"
                        style="@style/RegularText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="bottom"
                        android:minHeight="@dimen/margin_48dp"
                        android:text="@string/str_geo_location_enabled"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/always_desc_tv" />

                    <LinearLayout
                        android:id="@+id/line_ll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:alpha="0.2"
                        android:background="@color/color_search_grey"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/switchGeoLocation" />


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/notification_tv"
                        style="@style/RegularText"
                        android:layout_marginTop="@dimen/margin_25dp"
                        android:text="@string/str_receive_reminders_push_notification"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line_ll" />


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNotification"
                        style="@style/RegularText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="bottom"
                        android:minHeight="@dimen/margin_48dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="@string/str_push_notifications"
                        android:textSize="@dimen/font_16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/notification_tv" />

                    <LinearLayout
                        android:id="@+id/push_line_ll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:alpha="0.2"
                        android:background="@color/color_search_grey"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/switchNotification" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/continueBt"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:text="@string/str_continue"
                android:enabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:radius="@dimen/margin_5dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>