<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.heandroid.data.model.checkpaidcrossings.CheckPaidCrossingsOptionsModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llRecommendParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/top_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:text="@string/str_after_u_have_made_one_of_txt"
                    android:textColor="@color/grey_two"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <View
                        android:id="@+id/line1"
                        android:layout_width="@dimen/_6sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_two"
                        android:padding="@dimen/_10sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_7ssp"
                        android:layout_toEndOf="@+id/line1"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/str_please_note_it_can_take"
                        android:textColor="@color/grey_two"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/third_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/str_payment_reference_number"
                    android:textColor="@color/grey_two"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/str_if_have_paid_by_web_or_phone_txt"
                    android:textColor="@color/grey_two"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="normal" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.HeMobile.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/str_payment_reference_number"
                    app:boxStrokeColor="@color/color_00703C"
                    app:endIconDrawable="@drawable/ic_screenshot__121__2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/paymentRefNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />
                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:text="@string/number_plate"
                    android:textColor="@color/grey_two"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.HeMobile.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/vehicle_reg_number"
                    app:boxStrokeColor="@color/color_00703C"
                    app:endIconDrawable="@drawable/ic_screenshot__121__2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/vrm_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:layout_marginBottom="60dp"
                    android:backgroundTint="@{model.enable==true?@color/btn_color:@color/color_C9C9C9}"
                    android:enabled="@{model.enable}"
                    android:gravity="center"
                    android:text="@string/str_continue"
                    android:textAllCaps="false"
                    android:textColor="@{model.enable==false?@color/color_7D7D7D:@color/white}"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>