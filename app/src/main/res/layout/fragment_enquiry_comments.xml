<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.bottomnav.account.raiseEnquiry.EnquiryCommentsFragment">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/provide_more_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/can_provide_more_detail"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/dont_include_personal_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/str_dont_include_personal_text"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provide_more_tv" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/comments_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_230dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/edittext_box"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:maxLength="500"
            android:padding="@dimen/margin_15dp"
            android:textColor="@color/black"
            app:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dont_include_personal_tv"
            app:maxLength="500"
            tools:text="" />


        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/characters_rem_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/str_you_have_chars_remain"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comments_et" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/upload_file_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/str_upload_file_"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/characters_rem_tv" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/dont_include_personal1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/str_dont_include_personal_text"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upload_file_tv" />


        <LinearLayout
            android:id="@+id/allowed_file_types_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dont_include_personal1_tv" >

            <ImageView
                android:id="@+id/img_dot1"
                android:layout_width="@dimen/margin_6dp"
                android:layout_height="@dimen/margin_6dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:src="@drawable/circle_5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/open_sans"
                android:text="@string/str_allowed_file_types"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/filesize_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allowed_file_types_ll" >

            <ImageView
                android:id="@+id/img_dot2"
                android:layout_width="@dimen/margin_6dp"
                android:layout_height="@dimen/margin_6dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/circle_5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/open_sans"
                android:text="@string/str_file_size_not_morethan_8mb"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp"
                />

        </LinearLayout>
        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/choose_file_bt"
            style="@style/secondaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_choose_file"
            app:backgroundColor="@color/white"
            android:textColor="@color/new_btn_color"
            android:layout_marginBottom="@dimen/margin_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filesize_ll"
            app:radius="@dimen/margin_5dp" />
        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnNext"
            style="@style/PrimaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_continue"
            android:enabled="false"
            android:layout_marginBottom="@dimen/margin_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choose_file_bt"
            app:radius="@dimen/margin_5dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>