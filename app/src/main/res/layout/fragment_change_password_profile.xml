<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.conduent.nationalhighways.data.model.auth.forgot.password.ResetPasswordModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingEnd="@dimen/margin_20dp">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/enter_details_txt"
            style="@style/MediumTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:text="@string/change_your_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edt_current_password"
            style="@style/input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_37dp"
            app:imeOptions="actionNext"
            app:inputType="textPassword"
            app:isDisplayClearIcon="true"
            app:labelText="@string/str_current_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_details_txt"
            app:maxLength="64"
            app:type="password" />


        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edt_new_password"
            style="@style/input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            app:imeOptions="actionNext"
            app:inputType="textPassword"
            app:isDisplayClearIcon="true"
            app:labelText="@string/str_enter_new_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_current_password"
            app:maxLength="64"
            app:type="password" />


        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edt_confirm_password"
            style="@style/input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            app:imeOptions="actionDone"
            app:inputType="textPassword"
            app:isDisplayClearIcon="true"
            app:labelText="@string/str_confirm_new_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_new_password"
            app:maxLength="64"
            app:type="password" />

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btn_submit"
            style="@style/PrimaryButton"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/str_continue"
            app:isEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <LinearLayout
            android:id="@+id/instruction_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_121dp"
            android:orientation="vertical"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_confirm_password">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/str_your_password_must"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_dot1"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/circle_5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/str_at_least_8_character"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_dot2"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/circle_5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/str_contain_at_least_one_upper_case"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_dot3"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/circle_5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/str_contain_at_least_one_lower_case"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_dot4"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/circle_5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/sfregular"
                    android:text="@string/str_contain_at_least_one_number"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>