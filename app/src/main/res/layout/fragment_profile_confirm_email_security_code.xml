<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="enable"
            type="Boolean" />

        <variable
            name="data"
            type="com.conduent.nationalhighways.data.model.profile.ProfileUpdateEmailModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:background="@color/white">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/label_check_your_email"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20dp"
            android:layout_marginTop="@dimen/_30dp"
            android:fontFamily="@string/open_sans"
            android:textStyle="bold"
            android:text="@string/check_your_email_for_a_security_code"
            android:textColor="@color/re_send_color"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/label_we_have_sent_an_email"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@string/open_sans"
            android:text="@string/we_ve_sent_an_email_to_j_e_com"
            android:textColor="@color/re_send_color"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_check_your_email" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/label_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20dp"
            android:layout_marginTop="@dimen/_17dp"
            android:fontFamily="@string/open_sans"
            android:text="@string/str_code"
            android:textColor="@color/re_send_color"
            android:textSize="@dimen/_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_we_have_sent_an_email" />


        <RelativeLayout
            android:id="@+id/otpView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_code">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etCodeLayout"
                style="@style/Widget.HeMobile.TextInputLayout.Transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_enter_security_code"
                android:theme="@style/Widget.HeMobile.TextInputLayout.Transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCode"
                    style="@style/AppEditTextTransparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:nextFocusLeft="@id/tvResend"
                    android:textSize="@dimen/_16dp"
                    android:singleLine="true"
                    android:text="@={data.securityCode}" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvResend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/_10sdp"
                android:text="@string/str_resend"
                android:textColor="@color/high_lighted_color"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:text="@string/check_the_email_for_6_digit_security_code_this_code_will_expire_after_15_minutes_your_email_might_take_a_few_minutes_to_arrive_if_you_do_not_get_an_email_check_your_spam_folder"
            android:textColor="@color/black"
            android:textSize="@dimen/_15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otpView" />


        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/label_if_you_did_not_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@string/open_sans"
            android:text="@string/if_you_did_not_get_a_code_or_it_has_expired_select_resend_security_code"
            android:textColor="@color/re_send_color"
            android:textSize="@dimen/_15sp"
            android:layout_marginBottom="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnAction" />

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnAction"
            style="@style/PrimaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_98dp"
            android:enabled="@{enable}"
            android:text="@string/str_verify_code"
            android:layout_marginStart="@dimen/_6_5dp"
            android:textAllCaps="false"
            android:textColor="@{enable==false?@color/color_7D7D7D:@color/white}"
            android:textSize="@dimen/_13ssp"
            app:cornerRadius="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>