<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/tool_bar_lyt"
            layout="@layout/tool_bar_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:background="@drawable/he_bg"

            android:paddingRight="24dp">

            <TextView
                android:id="@+id/txt_fingerprint_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/biometriclogin"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/sfregular"/>


           <!-- <androidx.appcompat.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:checked="true"
                app:thumbTint="@color/white"
                android:textSize="@dimen/_13ssp"
                app:trackTintMode="multiply"
                android:theme="@style/Color1SwitchStyle"
                />-->

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_fingerprint_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:thumbTint="@color/switch_thumb"
                android:checked="true"
                app:trackTint="@color/switch_track"
                android:text="@string/usefingerprinttologin"
                android:switchPadding="20dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:fontFamily="@font/sfregular"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_10sdp"                android:backgroundTint="@color/blue_color"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@string/str_save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_forgot_password"
                app:layout_constraintVertical_bias="0.8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/biometric_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/resendcolor"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </LinearLayout>
    </LinearLayout>
</layout>