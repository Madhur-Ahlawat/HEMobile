<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="model"
            type="com.conduent.nationalhighways.data.model.auth.forgot.password.ResetPasswordModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/he_bg">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/str_create_password"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/enterpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/sfsemibold"
            android:text="@string/txt_enter_password"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_details_txt"


            />

        <RelativeLayout
            android:id="@+id/tf_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_39sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/edittext_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterpassword">

            <EditText
                android:id="@+id/edt_new_password"
                style="@style/EditTextStyle"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_baseline_visibility_off_24"
                android:fontFamily="@font/sfregular"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="40"
                android:singleLine="true"
                android:text="@={model.newPassword}" />
        </RelativeLayout>

        <TextView
            android:id="@+id/confirmpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/sfsemibold"
            android:text="@string/str_confirm_password"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tf_new_password"


            />

        <RelativeLayout
            android:id="@+id/tf_conform_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_39sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/edittext_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/confirmpassword">

            <EditText
                android:id="@+id/edt_conform_password"
                style="@style/EditTextStyle"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
                android:fontFamily="@font/sfregular"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="40"
                android:singleLine="true"
                android:text="@={model.confirmPassword}"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/instruction_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tf_conform_password">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/sfregular"
                android:text="@string/str_your_password_must"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/sfregular"
                android:text="@string/str_at_least_8_character"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />


            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/sfregular"
                android:text="@string/str_contain_at_least_one_upper_case"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />


            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/sfregular"
                android:text="@string/str_contain_at_least_one_lower_case"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />


            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/sfregular"
                android:text="@string/str_contain_at_least_one_number"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />


        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            style="@style/ButtonStyle"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:backgroundTint="@{model.enable==true?@color/blue_color:@color/btn_disable_color}"
            android:enabled="@{model.enable}"
            android:gravity="center"
            android:text="@string/str_submit"
            android:textColor="@{model.enable==true?@color/white:@color/btn_disable_txt_color}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>