    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/SemiBoldText"
            android:textColor="@color/black"
            android:text="@string/would_you_like_to_opt_in_to_two_step_verification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message_received_txt"
            style="@style/RegularText"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/txt_grey_5c"
            android:text="@string/this_will_make_access_to_your_account_more_secure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleTop" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/twoFactor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MediumTextBlack"
            android:textColor="@color/black"
            android:text="@string/two_factor_verification"
            app:layout_constraintEnd_toEndOf="@+id/btnNext"
            app:layout_constraintStart_toStartOf="@+id/btnNext"
            android:minHeight="@dimen/margin_48dp"
            android:layout_marginTop="@dimen/margin_30dp"
            app:layout_constraintTop_toBottomOf="@+id/message_received_txt"/>
