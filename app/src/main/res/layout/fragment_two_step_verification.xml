<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        tools:background="@drawable/he_bg">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/SemiBoldText"
            android:text="Would you like to opt in to two-step verification?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message_received_txt"
            style="@style/RegularText"
            android:layout_marginTop="@dimen/margin_5dp"
            android:text="This will make access to your account more secure."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleTop" />

        <RadioGroup
            android:id="@+id/radioGroupYesNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/btnNext"
            app:layout_constraintStart_toStartOf="@+id/btnNext"
            android:layout_marginTop="@dimen/margin_30dp"
            app:layout_constraintTop_toBottomOf="@+id/message_received_txt" >
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                style="@style/RadioButtonStyle"
                android:text="Yes"
                android:checked="true"
                android:id="@+id/radioButtonYes"
                android:layout_height="@dimen/margin_50dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:text="No"
                style="@style/RadioButtonStyle"
                android:id="@+id/radioButtonNo"
                android:layout_marginTop="2dp"
                android:layout_height="@dimen/margin_50dp"/>

        </RadioGroup>



        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnNext"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_50dp"
            android:text="@string/next"
            app:radius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>