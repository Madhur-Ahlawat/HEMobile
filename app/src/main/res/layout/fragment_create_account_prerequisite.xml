<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_16dp"
        tools:background="@drawable/he_bg"
        android:paddingEnd="@dimen/margin_20dp">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/txtSignUp"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:text="@string/dartford_crossing_account_sign_in_or_set_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/txtAlreadyAccount"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:text="@string/if_you_already_have_an_account_you_can"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSignUp" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/txtSignIn"
            style="@style/SemiBoldText"
            android:layout_width="wrap_content"
            android:text="@string/sign_in"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtAlreadyAccount"
            app:layout_constraintStart_toEndOf="@+id/txtAlreadyAccount"
            app:layout_constraintTop_toTopOf="@+id/txtAlreadyAccount" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/txtBefore"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:layout_marginTop="30dp"
            android:text="@string/before_you_start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAlreadyAccount" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/textView2"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:text="@string/you_ll_need_to_have"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBefore" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/textView3"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/circle_5dp"
            android:drawablePadding="20dp"
            android:text="@string/an_email_address_to_receive_a_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/textView6"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/circle_5dp"
            android:drawablePadding="20dp"
            android:text="@string/a_phone_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_5dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.30" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/textView7"
            style="@style/RegularText"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:gravity="top"
            android:text="@string/the_vehicle_registration_number_plate_you_want_to_add_to_the_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/circle_5dp"
            android:drawablePadding="20dp"
            android:text="@string/a_valid_debit_or_credit_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnCreateAccount"
            android:layout_width="0dp"
            app:radius="5dp"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            style="@style/PrimaryButton"
            android:layout_marginBottom="@dimen/margin_50dp"
            android:backgroundTint="@color/buttonColorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>