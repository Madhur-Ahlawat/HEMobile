<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_16dp"
        android:paddingEnd="@dimen/margin_20dp">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/txtSignUp"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:text="@string/dartford_crossing_account_sign_in_or_set_up"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/txtAlreadyAccount"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:text="@string/if_you_already_have_an_account_you_can"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSignUp" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/txtSignIn"
            style="@style/SemiBoldText"
            android:layout_width="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/sign_in"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/txtAlreadyAccount"
            app:layout_constraintStart_toEndOf="@+id/txtAlreadyAccount"
            app:layout_constraintTop_toTopOf="@+id/txtAlreadyAccount" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/txtBefore"
            style="@style/MediumTextBlack"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:text="@string/before_you_start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAlreadyAccount" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/textView2"
            style="@style/RegularTextBlack"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:text="@string/you_ll_need_to_have"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBefore" />


        <LinearLayout
            android:id="@+id/createAccounPoint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:orientation="horizontal"
            android:importantForAccessibility="yes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <View
                android:layout_width="@dimen/margin_5dp"
                android:layout_height="@dimen/margin_5dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_5dp"
                android:importantForAccessibility="no"
                />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                style="@style/RegularTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:layout_marginStart="@dimen/margin_15dp"
                android:text="@string/an_email_address_to_receive_a_code" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/createAccounPoint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:importantForAccessibility="yes"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createAccounPoint1">

            <View
                android:layout_width="@dimen/margin_5dp"
                android:layout_height="@dimen/margin_5dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_5dp"
                android:importantForAccessibility="no"
                />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                style="@style/RegularTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:importantForAccessibility="no"
                android:text="@string/a_phone_number" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/createAccounPoint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:orientation="horizontal"
            android:importantForAccessibility="yes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createAccounPoint2">

            <View
                android:layout_width="@dimen/margin_5dp"
                android:layout_height="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:background="@drawable/circle_5dp"
                android:importantForAccessibility="no"
                />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                style="@style/RegularTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:importantForAccessibility="no"
                android:text="@string/the_vehicle_registration_number_plate_you_want_to_add_to_the_account" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/createAccounPoint4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:orientation="horizontal"
            android:importantForAccessibility="yes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createAccounPoint3">

            <View
                android:layout_width="@dimen/margin_5dp"
                android:layout_height="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:background="@drawable/circle_5dp"
                android:importantForAccessibility="no"
                />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                style="@style/RegularTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:layout_marginStart="@dimen/margin_15dp"
                android:text="@string/a_valid_debit_or_credit_card" />

        </LinearLayout>


        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnCreateAccount"
            style="@style/PrimaryButton"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/create_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createAccounPoint4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>