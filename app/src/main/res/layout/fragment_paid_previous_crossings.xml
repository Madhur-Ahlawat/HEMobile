<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isEnable"
            type="Boolean" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_18dp"
            android:paddingEnd="@dimen/margin_20dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paid_for_please_note"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans" />


            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/edit_reference_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:padding="0dp"
                app:labelText="@string/payment_reference_number"
                style="@style/input_text"
                app:inputType="text"
                app:maxLength="12"
                android:maxLength="12"
                app:imeOptions="actionDone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/reference_number_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/for_example_hd542321725_or_1_898008009"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:src="@drawable/circle_5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_7dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/paid_crossing_point1"
                    android:textColor="@color/grayColorIcon"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:src="@drawable/circle_5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_7dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/paid_crossing_point2"
                    android:textColor="@color/grayColorIcon"
                    android:textSize="14sp" />

            </LinearLayout>


            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/edit_number_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:padding="0dp"
                style="@style/input_text"
                app:labelText="@string/vehicle_registration_number_plate"
                app:maxLength="10"
                android:maxLength="10"
                app:inputType="text"
                app:imeOptions="actionDone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/belowHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/for_example_cu57abc"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans" />

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/findVehicle"
                android:layout_marginTop="@dimen/_20sdp"
                app:isEnabled="false"
                style="@style/PrimaryButton"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:text="@string/str_continue"
                app:layout_goneMarginTop="@dimen/margin_30dp"/>


        </LinearLayout>
    </ScrollView>



</layout>