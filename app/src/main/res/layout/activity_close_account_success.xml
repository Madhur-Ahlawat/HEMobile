<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar_with_title_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_115dp"
                android:src="@drawable/checkicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/title"
                style="@style/OpenSansBoldText"
                android:layout_marginTop="@dimen/_21dp"
                android:gravity="center"
                android:text="@string/str_we_are_closing_account"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_check" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/message1"
                style="@style/RegularTextBlack"
                android:layout_marginHorizontal="@dimen/_27dp"
                android:layout_marginTop="@dimen/_18dp"
                android:text="@string/str_you_can_no_longer_access_account"
                android:textAlignment="center"
                android:textSize="@dimen/_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/message2"
                style="@style/RegularTextBlack"
                android:layout_marginTop="@dimen/_18dp"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/_14sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/message1"
                tools:text="We will send an email to\namruthapersonalprepay@gmail.com\nwhen the account has been closed." />

            <ImageView
                android:id="@+id/iv_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18dp"
                android:src="@drawable/warningicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/message2" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/penalty_message"
                style="@style/RegularTextBlack"
                android:layout_marginHorizontal="@dimen/_27dp"
                android:layout_marginTop="@dimen/_18dp"
                android:gravity="center"
                android:text="@string/str_donot_pay_dartcharge"
                android:textAlignment="center"
                android:textSize="@dimen/_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_warning" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/title_next"
                style="@style/OpenSansBoldText"
                android:layout_marginTop="@dimen/_31dp"
                android:gravity="center"
                android:text="@string/what_happens_next"
                android:textSize="@dimen/_15sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/penalty_message"
                tools:visibility="visible" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/what_happens_next"
                style="@style/RegularTextBlack"
                android:layout_marginHorizontal="@dimen/_27dp"
                android:layout_marginTop="@dimen/_18dp"
                android:gravity="center"
                android:text="@string/any_remaining_credit_will_be_refunded_to_your_ndefault_payment_method"
                android:textAlignment="center"
                android:textSize="@dimen/_14sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_next"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>