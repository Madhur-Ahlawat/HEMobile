<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/cardView"
        app:cardCornerRadius="5dp"
        android:elevation="3dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_15dp"
        android:minHeight="@dimen/_50sdp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtPlateNumber"
            style="@style/MediumTextBlack"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/vehicle_registration_number_plate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            style="@style/RegularTextBlack"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/vehiclePlateNumber"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="@id/update_vehicle"
            app:layout_constraintBottom_toBottomOf="@+id/update_vehicle"
            android:text="AJ66MHA" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:padding="@dimen/margin_16dp"
            android:minHeight="@dimen/margin_48dp"
            android:minWidth="@dimen/margin_48dp"
            android:contentDescription="@string/str_edit"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtPlateNumber"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/update_vehicle"
            android:layout_marginEnd="12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_16dp"
            android:minHeight="@dimen/margin_48dp"
            android:minWidth="@dimen/margin_48dp"
            android:contentDescription="@string/delete"
            android:src="@drawable/delete"
            app:layout_constraintTop_toBottomOf="@id/txtPlateNumber"
            app:layout_constraintEnd_toStartOf="@id/update_vehicle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/delete_vehicle"
            android:layout_marginEnd="12dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>