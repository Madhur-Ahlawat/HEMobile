<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_30dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingBottom="@dimen/margin_30dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_ll"
            android:layout_alignParentTop="true"
            android:scrollbars="none"

            >

            <LinearLayout
                android:id="@+id/llCheckvehicleDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tick_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_tick_blue" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_14_67dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="@string/credit_transferred"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_1dp"
                    android:layout_marginTop="@dimen/margin_36dp"
                    android:layout_marginEnd="@dimen/margin_1dp"
                    android:layout_marginBottom="@dimen/margin_1dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutVehicleRegistration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">

                        <TextView
                            android:id="@+id/txtVehicleRegistration"
                            style="@style/MediumTextBlack"
                            android:text="@string/vehicle_registration_number_plate"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/vehicleRegisration"
                            style="@style/RegularTextBlack"
                            android:layout_marginTop="@dimen/margin_5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtVehicleRegistration"
                            tools:text="@string/app_name" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_1dp"
                    android:layout_marginTop="@dimen/margin_16_34dp"
                    android:layout_marginEnd="@dimen/margin_1dp"
                    android:layout_marginBottom="@dimen/margin_1dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cardRecentCrossings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">

                        <TextView
                            android:id="@+id/txtCreditRemaining"
                            style="@style/MediumTextBlack"
                            android:text="@string/credit_remaining"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/creditRemaining"
                            style="@style/RegularTextBlack"
                            android:layout_marginTop="@dimen/margin_5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtCreditRemaining"
                            tools:text="@string/app_name" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/emailCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_1dp"
                    android:layout_marginTop="@dimen/margin_16_34dp"
                    android:layout_marginEnd="@dimen/margin_1dp"
                    android:layout_marginBottom="@dimen/margin_1dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">

                        <TextView
                            android:id="@+id/txtCreditWillExpireOn"
                            style="@style/MediumTextBlack"
                            android:text="@string/expiry_date"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/creditWillExpireOn"
                            style="@style/RegularTextBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:gravity="start|center"
                            app:layout_constraintStart_toStartOf="@id/txtCreditWillExpireOn"
                            app:layout_constraintTop_toBottomOf="@id/txtCreditWillExpireOn"
                            tools:text="@string/app_name" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/btnOk"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back_to_main_menu"
                app:radius="5dp" />

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/btnFeedback"
                style="@style/secondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feed_back_to_improve_service"
                android:textColor="@color/new_btn_color"
                android:textColorLink="@color/new_btn_color"
                app:borderColor="@color/new_btn_color"
                app:radius="5dp" />
        </LinearLayout>

    </RelativeLayout>

</layout>