<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingTop="@dimen/_20dp"
            android:paddingEnd="@dimen/margin_18dp"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_check_blue"
                android:textSize="@dimen/font_14sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/tv_account_suspended"
                style="@style/Widget.HeMobile.TextInputLayout.Dark_Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/str_account_reopened"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintEnd_toEndOf="@+id/ivWarning"
                app:layout_constraintStart_toStartOf="@id/ivWarning"
                app:layout_constraintTop_toBottomOf="@+id/ivWarning" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/tvYouWillNeedToPay"
                style="@style/Widget.HeMobile.TextInputLayout.Dark_Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans"

                android:gravity="center_horizontal"
                android:text="@string/str_we_have_sent_confirmation"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/ivWarning"
                app:layout_constraintStart_toStartOf="@id/ivWarning"
                app:layout_constraintTop_toBottomOf="@+id/tv_account_suspended" />

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_payment_reference_number"
                style="@style/cardView_style"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_2dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvYouWillNeedToPay">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/payment_ref_tv"
                        style="@style/SemiBoldTextBlack"
                        android:layout_width="@dimen/margin_0dp"
                        android:text="@string/str_payment_reference_number"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/reference_number_tv"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/payment_ref_tv" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/tvYouWillAlsoNeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:text="@string/str_you_have_less_than"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintEnd_toEndOf="@+id/ivWarning"
                app:layout_constraintStart_toStartOf="@id/ivWarning"
                app:layout_constraintTop_toBottomOf="@+id/layout_payment_reference_number" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/succesful_card_added"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:text="@string/str_you_have_successfully_added_new_card"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/ivWarning"
                app:layout_constraintStart_toStartOf="@id/ivWarning"
                app:layout_constraintTop_toBottomOf="@+id/tvYouWillAlsoNeed" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                android:minHeight="@dimen/_74dp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/succesful_card_added">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivCardType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_18dp"
                        android:src="@drawable/visablue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/tv_select_payment_method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_18dp"
                        android:layout_marginEnd="@dimen/_18dp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivCardType"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="VISA ****3456" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <com.conduent.apollo.ui.CMButton
                android:id="@+id/btnTopUpNow"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:text="@string/str_go_to_dashboard"
                app:isEnabled="true"
                />

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/feedback_bt"
                style="@style/secondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:text="@string/feed_back_to_improve_service"
                android:textColor="@color/new_btn_color"
                android:textColorLink="@color/new_btn_color"
                app:borderColor="@color/new_btn_color"
                 />


        </LinearLayout>


    </ScrollView>
</layout>