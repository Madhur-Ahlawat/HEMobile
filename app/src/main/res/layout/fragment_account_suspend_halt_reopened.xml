<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingTop="@dimen/_20dp"
            android:paddingEnd="@dimen/margin_18dp"
            android:paddingBottom="@dimen/margin_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="115dp"
                android:src="@drawable/ic_check_blue"
                android:textSize="@dimen/font_14sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/tv_account_suspended"
                style="@style/Widget.HeMobile.TextInputLayout.Dark_Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/str_account_reopened"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintEnd_toEndOf="@+id/ivWarning"
                app:layout_constraintStart_toStartOf="@id/ivWarning"
                app:layout_constraintTop_toBottomOf="@+id/ivWarning" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_payment_reference_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_card_type"
                android:minHeight="@dimen/margin_60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvYouWillNeedToPay">


                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/tv_payment_reference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/str_payment_reference"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/tvYouWillNeedToPay"
                style="@style/Widget.HeMobile.TextInputLayout.Dark_Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:text="@string/str_we_have_sent_confirmation"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/ivWarning"
                app:layout_constraintStart_toStartOf="@id/ivWarning"
                app:layout_constraintTop_toBottomOf="@+id/tv_account_suspended" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/tvYouWillAlsoNeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:text="@string/str_you_have_less_than"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintEnd_toEndOf="@+id/ivWarning"
                app:layout_constraintStart_toStartOf="@id/ivWarning"
                app:layout_constraintTop_toBottomOf="@+id/layout_payment_reference_number" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/bg_card_type"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvYouWillAlsoNeed">

                <ImageView
                    android:id="@+id/ivCardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/tv_select_payment_method"
                    style="@style/Widget.HeMobile.TextInputLayout.Dark_Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_18dp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/grayColorIcon"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivCardType"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.conduent.apollo.ui.CMButton
                android:id="@+id/btnTopUpNow"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:text="@string/str_go_to_dashboard"
                app:isEnabled="true"
                app:layout_constraintBottom_toTopOf="@id/feedback_bt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/feedback_bt"
                style="@style/secondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:text="@string/feed_back_to_improve_service"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>