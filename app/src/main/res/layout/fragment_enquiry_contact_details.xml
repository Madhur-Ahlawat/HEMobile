<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.conduent.nationalhighways.ui.bottomnav.account.raiseEnquiry.viewModel.RaiseNewEnquiryViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/margin_20dp"
            tools:context=".ui.bottomnav.account.raiseEnquiry.EnquiryContactDetailsFragment">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/contact_details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/what_contact_details"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/dont_include_personal_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/well_use_details_to_respond_enquiry"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_details_tv" />


            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/firstname_et"
                style="@style/input_text"
                android:importantForAccessibility="yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                app:imeOptions="actionNext"
                app:inputType="text"
                app:labelText="@string/first_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dont_include_personal_tv"
                app:maxLength="50" />

            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                style="@style/input_text"
                android:id="@+id/lastname_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:textColor="@color/black"
                app:imeOptions="actionNext"
                app:inputType="text"
                app:labelText="@string/last_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstname_et"
                app:maxLength="50" />

            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                style="@style/input_text"
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:imeOptions="actionNext"
                app:maxLength="64"
                android:maxLength="64"
                app:labelText="@string/email_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lastname_et" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/label_country_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:text="@string/str_country_code"
                android:textColor="@color/label_color"
                android:importantForAccessibility="no"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_et" />

            <com.conduent.nationalhighways.utils.widgets.NHAutoCompleteTextview
                style="@style/input_text"
                android:id="@+id/countrycode_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_country_code"
                android:layout_marginTop="0dp"
                android:minHeight="@dimen/margin_48dp"
                android:paddingLeft="0dp"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/font_16sp"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_country_code" />


            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/mobileNumber_et"
                style="@style/input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:gravity="center_vertical"
                app:imeOptions="actionNext"
                app:inputType="phone"
                android:textSize="@dimen/font_16sp"
                app:labelText="@string/mobile_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countrycode_et"
                app:maxLength="15" />


            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/btnNext"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/str_continue"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobileNumber_et"
                app:radius="@dimen/margin_5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>