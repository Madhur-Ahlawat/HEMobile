<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_15dp"
            android:lineSpacingExtra="@dimen/margin_2dp"
            android:text="@string/str_logout_msg"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp"
            android:drawablePadding="@dimen/margin_20dp"
            app:drawableTopCompat="@drawable/checkicon"
            android:textColor="@color/dark_blue_color"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnStart"

            />


        <com.conduent.apollo.ui.CMButton
            android:id="@+id/btnStart"
            style="@style/PrimaryButton"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="@string/start_again"
            app:layout_constraintBottom_toTopOf="@+id/btnSignin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.conduent.apollo.ui.CMButton
            android:id="@+id/btnSignin"
            style="@style/PrimaryButton"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="30dp"
            android:text="@string/txt_sign_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
