<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.account.creation.newAccountCreation.TopUpFragment"
        android:paddingTop="18dp"
        android:paddingStart="20dp"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingBottom="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MediumTextBlack"
            android:text="@string/str_what_your_top_up_low_balance"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MediumTextBlack"
            android:text="@string/str_low_balance_threshold"
            android:layout_marginTop="12dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:text="@string/str_if_your_balance_falls_below"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"

            />
        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/lowBalance"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:maxLength="50"
            app:imeOptions="actionNext"
            app:inputType="number"
            app:labelText="@string/str_low_balance"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_minimum_amount"
            android:textColor="@color/label_color"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MediumTextBlack"
            android:text="@string/str_top_up_amount"
            android:layout_marginTop="40dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:text="@string/str_you_will_automatically_top_up"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"

            />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/top"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:maxLength="50"
            app:imeOptions="actionNext"
            app:inputType="number"
            app:labelText="@string/top_up_amount"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_up_minimum_amount"
            android:textColor="@color/label_color"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:layout_marginTop="5dp"/>

        <com.conduent.apollo.ui.CMButton
            style="@style/PrimaryButton"
            android:layout_marginTop="30dp"
            android:text="@string/str_continue"
            android:enabled="false"
            android:id="@+id/topUpBtn"/>



    </LinearLayout>
    </ScrollView>

</layout>