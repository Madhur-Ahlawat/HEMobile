<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_submit"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/checkicon"
                android:drawablePadding="@dimen/margin_20dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingRight="@dimen/margin_20dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/str_password_reset_successfull"
                android:textColor="@color/re_send_color"
                android:textSize="@dimen/font_16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingRight="@dimen/margin_20dp"
                android:gravity="center"
                android:text="@string/you_will_receive_a_confirmation_email"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp" />

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/signin_bt"
                style="@style/PrimaryButton"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/str_continue_login" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/deleteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/vehicle_deleted"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPlateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:elevation="@dimen/margin_3dp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/margin_5dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/_50sdp"
                    android:padding="@dimen/margin_15dp">

                    <TextView
                        android:id="@+id/txtPlateNumber"
                        style="@style/MediumTextBlack"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="@string/vehicle_registration_number_plate"
                        android:textSize="@dimen/font_14sp"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehiclePlateNumber"
                        style="@style/RegularTextBlack"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="AJ66MHA"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtPlateNumber" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.conduent.apollo.ui.CMButton
            android:id="@+id/btn_submit"
            style="@style/PrimaryButton"
            android:layout_above="@id/feedback_bt"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="@string/str_continue_login" />

        <com.conduent.apollo.ui.CMButton
            android:id="@+id/feedback_bt"
            style="@style/secondaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/new_btn_color"
            app:borderColor="@color/new_btn_color"
            android:textColorLink="@color/new_btn_color"
            android:layout_marginBottom="@dimen/margin_50dp"
            android:text="@string/feed_back_to_improve_service"
            app:radius="@dimen/margin_5dp" />
    </RelativeLayout>

</layout>