<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/tv_use_this_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26dp"
            android:layout_marginTop="@dimen/_17dp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center_vertical"
            android:text="@string/str_otherways_to_pay_your_charge"
            android:textColor="@color/gray_707070"
            android:textSize="@dimen/_17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/tv_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_29dp"
            android:layout_marginTop="@dimen/_14dp"
            android:fontFamily="@font/open_sans"
            android:lineSpacingExtra="@dimen/_8dp"
            android:text="@string/str_using_this_mobile_app"
            android:textColor="@color/black"
            android:textColorLink="@color/btn_color"
            android:textSize="@dimen/_16sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22dp">

            <ImageView
                android:layout_width="@dimen/_54dp"
                android:layout_height="@dimen/_60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_26dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_exclaimation_black" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="You must pay the Dart Charge by midnight the day after you cross, otherwise you may get a fine (Penalty Charge Notice)."
                android:textColor="@color/gray_707070"
                android:textSize="@dimen/_20sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>