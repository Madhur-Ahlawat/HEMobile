<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.conduent.nationalhighways.ui.bottomnav.account.raiseEnquiry.viewModel.RaiseNewEnquiryViewModel" />

        <import type="android.view.View" />

        <variable
            name="categoryClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="sub_category"
            android:value="Sub category"
            type="String" />

        <variable
            name="commentsClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="contactDetailsClickListener"
            type="android.view.View.OnClickListener" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_24dp"
            android:layout_marginHorizontal="@dimen/margin_2dp"
            android:gravity="start|top"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/details_enquiry_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:fontFamily="@font/open_sans_semibold"
                tools:text="@string/details_of_enquiry"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/contact_details_tv"
                style="@style/RegularTextBlack"
                android:layout_marginTop="@dimen/margin_5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_enquiry_tv"
                tools:text="@string/str_check_your_answer_before_enquiry" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="3dp"
                android:importantForAccessibility="yes"
                android:screenReaderFocusable="true"
                app:cardCornerRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:screenReaderFocusable="true"
                    android:padding="@dimen/margin_15dp">

                    <TextView
                        android:id="@+id/category_tv"
                        style="@style/MediumTextBlack"
                        android:layout_width="0dp"
                        android:screenReaderFocusable="false"
                        android:text="@string/str_category"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/category_data_tv"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:screenReaderFocusable="false"
                        android:text="@{viewModel.enquiryModel.category.value}"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/ll_edit_category"
                        app:layout_constraintTop_toBottomOf="@id/category_tv" />
                    <LinearLayout
                        android:id="@+id/ll_edit_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="yes"
                        android:contentDescription="@string/str_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >
                        <ImageView
                            android:id="@+id/category_edit_iv"
                            android:layout_width="wrap_content"
                            android:screenReaderFocusable="true"
                            android:onClick="@{categoryClickListener}"
                            android:importantForAccessibility="yes"
                            android:contentDescription="@string/str_edit"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/margin_48dp"
                            android:minWidth="@dimen/margin_48dp"
                            android:padding="@dimen/margin_20dp"
                            android:src="@drawable/edit"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_sub_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="3dp"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:screenReaderFocusable="true"
                app:cardCornerRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:screenReaderFocusable="true"
                    android:padding="@dimen/margin_15dp">

                    <TextView
                        android:id="@+id/sub_category_tv"
                        style="@style/MediumTextBlack"
                        android:text="@string/str_sub_category"
                        android:textSize="15sp"
                        android:screenReaderFocusable="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/sub_category_data_tv"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:focusable="false"
                        android:layout_width="0dp"
                        android:text="@{viewModel.enquiryModel.subCategory.value}"
                        android:importantForAccessibility="no"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/subcategory_edit_iv"
                        app:layout_constraintTop_toBottomOf="@id/sub_category_tv"/>

                    <ImageView
                        android:id="@+id/subcategory_edit_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_48dp"
                        android:minWidth="@dimen/margin_48dp"
                        android:padding="@dimen/margin_20dp"
                        android:importantForAccessibility="yes"
                        android:src="@drawable/edit"
                        android:onClick="@{categoryClickListener}"
                        android:contentDescription="@string/str_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/contact_message_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/contact_message"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="3dp"
                android:focusable="true"
                android:importantForAccessibility="yes"
                app:cardCornerRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:screenReaderFocusable="true"
                    android:padding="@dimen/margin_15dp">

                    <TextView
                        android:id="@+id/contact_message_tv"
                        style="@style/MediumTextBlack"
                        android:text="@string/contact_message"
                        android:textSize="15sp"
                        android:screenReaderFocusable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"  />

                    <ImageView
                        android:id="@+id/contact_message_edit_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_48dp"
                        android:minWidth="@dimen/margin_48dp"
                        android:padding="@dimen/margin_20dp"
                        android:contentDescription="@string/str_edit"
                        android:importantForAccessibility="yes"
                        android:src="@drawable/edit"
                        android:onClick="@{commentsClickListener}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/personal_details_tv"
                style="@style/SemiBoldTextBlack"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:text="@string/personal_details"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contact_message_cv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/name_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="3dp"
                android:focusable="true"
                android:importantForAccessibility="yes"
                app:cardCornerRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:screenReaderFocusable="true"
                    android:padding="@dimen/margin_15dp">

                    <TextView
                        android:id="@+id/name_tv"
                        style="@style/MediumTextBlack"
                        android:text="@string/str_name"
                        android:screenReaderFocusable="false"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/name_data_tv"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="start|center"
                        android:text="@{viewModel.enquiryModel.firstname+' '+viewModel.enquiryModel.lastname}"
                        android:importantForAccessibility="no"
                        android:focusable="false"
                        app:layout_constraintEnd_toStartOf="@+id/name_edit_iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name_tv" />

                    <ImageView
                        android:id="@+id/name_edit_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_48dp"
                        android:minWidth="@dimen/margin_48dp"
                        android:padding="@dimen/margin_20dp"
                        android:importantForAccessibility="yes"
                        android:src="@drawable/edit"
                        android:onClick="@{contactDetailsClickListener}"
                        android:contentDescription="@string/str_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/email_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="3dp"
                android:contentDescription="Email Address @{viewModel.enquiryModel.email}"
                android:focusable="true"
                android:importantForAccessibility="yes"
                app:cardCornerRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:screenReaderFocusable="true"
                    android:padding="@dimen/margin_15dp">

                    <TextView
                        android:id="@+id/email_tv"
                        style="@style/MediumTextBlack"
                        android:text="@string/email_address"
                        android:textSize="15sp"
                        android:screenReaderFocusable="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/email_data_tv"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="start|center"
                        android:text="@{viewModel.enquiryModel.email}"
                        android:focusable="false"
                        android:importantForAccessibility="no"
                        app:layout_constraintEnd_toStartOf="@+id/email_edit_iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/email_tv" />

                    <ImageView
                        android:id="@+id/email_edit_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_48dp"
                        android:minWidth="@dimen/margin_48dp"
                        android:padding="@dimen/margin_20dp"
                        android:src="@drawable/edit"
                        android:onClick="@{contactDetailsClickListener}"
                        android:importantForAccessibility="yes"
                        android:contentDescription="@string/str_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mobile_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:visibility="@{viewModel.enquiryModel.mobileNumber.empty?View.GONE:View.VISIBLE}"
                android:layout_marginTop="@dimen/margin_2dp"
                android:contentDescription="Mobile Number @{viewModel.enquiryModel.countryCode+' ' +viewModel.enquiryModel.mobileNumber}"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="3dp"
                android:focusable="true"
                android:importantForAccessibility="yes"
                app:cardCornerRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:screenReaderFocusable="true"
                    android:padding="@dimen/margin_15dp">

                    <TextView
                        android:id="@+id/mobile_tv"
                        style="@style/MediumTextBlack"
                        android:text="@string/str_mobile_number"
                        android:textSize="15sp"
                        android:screenReaderFocusable="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/mobile_data_tv"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="start|center"
                        android:text="@{viewModel.enquiryModel.countryCode+' ' +viewModel.enquiryModel.mobileNumber}"
                        android:focusable="false"
                        android:importantForAccessibility="no"
                        app:layout_constraintEnd_toStartOf="@+id/mobile_edit_iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mobile_tv" />

                    <ImageView
                        android:id="@+id/mobile_edit_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_48dp"
                        android:minWidth="@dimen/margin_48dp"
                        android:padding="@dimen/margin_20dp"
                        android:src="@drawable/edit"
                        android:importantForAccessibility="yes"
                        android:onClick="@{contactDetailsClickListener}"
                        android:contentDescription="@string/str_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnNext"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_55dp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:text="@string/str_continue"
                app:radius="5dp" />

        </LinearLayout>

    </ScrollView>

</layout>