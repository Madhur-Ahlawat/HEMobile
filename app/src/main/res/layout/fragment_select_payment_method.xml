<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.payment.newpaymentmethod.SelectPaymentMethodFragment"
        android:paddingStart="@dimen/margin_18dp"
        android:paddingTop="@dimen/margin_20dp"
        android:paddingEnd="@dimen/margin_18dp"
        android:paddingBottom="@dimen/margin_20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_new_payment_method"
            style="@style/MediumTextBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/choosePaymentMethod" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDebit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_74dp"
            android:layout_marginTop="@dimen/margin_18dp"
            app:layout_goneMarginBottom="@dimen/margin_5dp"
            app:cardCornerRadius="@dimen/margin_5dp"
            android:elevation="@dimen/margin_3dp"
            android:layout_marginHorizontal="@dimen/margin_1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choosePaymentMethod">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ivCardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/debitcreditcard"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/tv_select_payment_method"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_18dp"
                    android:layout_marginEnd="@dimen/margin_18dp"
                    android:gravity="center"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:text="@string/debit_credit_card"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintEnd_toStartOf="@id/forward"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivCardType"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:importantForAccessibility="no"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/margin_18dp"
                    android:id="@+id/forward" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDirectDebit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_74dp"
            android:layout_marginTop="@dimen/margin_18dp"
            app:layout_goneMarginBottom="@dimen/margin_5dp"
            app:cardCornerRadius="@dimen/margin_5dp"
            android:elevation="@dimen/margin_3dp"
            android:layout_marginHorizontal="@dimen/margin_1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewDebit">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/cardIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/ic_direct_debit"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/debitCreditCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_18dp"
                    android:layout_marginEnd="@dimen/margin_18dp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="@string/direct_debit"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintEnd_toStartOf="@+id/directDebitForward"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cardIcon"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:importantForAccessibility="no"
                    android:layout_marginEnd="@dimen/margin_18dp"
                    android:id="@+id/directDebitForward" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>