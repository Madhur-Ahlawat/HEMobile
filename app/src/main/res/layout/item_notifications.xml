<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:background="@drawable/bg_rounded_corner_10dp"
        android:elevation="@dimen/_6dp"
        android:minHeight="@dimen/_114dp"
        android:paddingHorizontal="@dimen/_8dp">

        <CheckBox
            android:buttonTint="#E0E0E0"
            android:id="@+id/selectNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23dp"
            android:layout_marginTop="@dimen/margin_17dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="9 Jan 2023 11:00 AM"
            android:textColor="@color/black"
            android:textSize="@dimen/_16dp"
            app:layout_constraintBottom_toTopOf="@id/selectNotification"
            app:layout_constraintStart_toEndOf="@+id/selectNotification"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:layout_width="wrap_content"
            android:id="@+id/message"

            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23dp"
            android:layout_marginTop="@dimen/_4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="left|top"
            android:text="Auto-topup payment successful"
            android:textColor="@color/black"
            android:textSize="@dimen/_16dp"
            app:fontFamily="@font/open_sans"
            app:layout_constraintStart_toEndOf="@id/selectNotification"
            app:layout_constraintTop_toBottomOf="@+id/notification_date" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/seeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:fontFamily="@font/open_sans"
            android:text="See More"
            android:textColor="@color/hyperlink_blue2"
            android:textSize="@dimen/_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/selectNotification" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>