<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_25dp"
        android:layout_marginEnd="@dimen/margin_24dp">

        <LinearLayout
            android:id="@+id/llCheckvehicleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_2dp"
            android:layout_marginBottom="@dimen/margin_79dp"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginEnd="@dimen/margin_24dp"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_120dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:drawableTop="@drawable/warningicon"
                android:drawablePadding="@dimen/margin_35dp"
                android:text="@string/vehicle_number_plate_is_exempt_from_dart_ncharge_payment"
                android:textColor="@color/new_btn_color"
                android:textSize="@dimen/font_16sp" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_13dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="@string/our_records_show_that_number_plate_is_exempt_from_dart_charge_payment"
                android:textColor="@color/new_btn_color"
                android:textSize="@dimen/font_15sp" />
        </LinearLayout>

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnTransfer"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnCancel"
            android:text="@string/transfer_to_another_vehicle"
            app:radius="@dimen/margin_5dp" />

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnCancel"
            style="@style/secondaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/margin_23dp"
            android:text="@string/cancel"


            app:radius="@dimen/margin_5dp" />
    </RelativeLayout>

</layout>