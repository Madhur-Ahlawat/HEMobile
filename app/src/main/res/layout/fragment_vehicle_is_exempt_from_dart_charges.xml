<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_25dp"
        android:layout_marginEnd="@dimen/_24dp">

        <LinearLayout
            android:id="@+id/llCheckvehicleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_2dp"
            android:layout_marginBottom="@dimen/_79dp"
            android:layout_above="@id/btnOk"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginEnd="@dimen/_24dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tick_blue"
                android:layout_width="73.33dp"
                android:layout_height="73.33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="127dp"
                android:tint="@color/new_btn_color"
                android:src="@drawable/error" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_36dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="@string/vehicle_number_plate_is_exempt_from_dart_ncharge_payment"
                android:textColor="@color/new_btn_color"
                android:textSize="@dimen/font_16sp" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="@string/our_records_show_that_number_plate_is_exempt_from_dart_charge_payment_and_your_remaining_credit_cannot_be_transferred_contact_the_dart_charge_contact_centre_for_help_telephone_0300_300_0120_every_day_8am_to_8pm"
                android:textColor="@color/new_btn_color"
                android:textSize="@dimen/_15sp" />
        </LinearLayout>

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnTransfer"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnCancel"
            android:text="@string/transfer_to_another_vehicle"
            app:radius="5dp" />

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnCancel"
            style="@style/secondaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_marginBottom="@dimen/_23dp"
            android:text="@string/cancel"
            android:textColor="@color/doItLaterColour"
            app:borderColor="@color/doItLaterColour"
            app:radius="5dp" />
    </RelativeLayout>

</layout>