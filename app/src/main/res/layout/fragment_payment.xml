<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical"
        tools:context=".ui.account.creation.newAccountCreation.PaymentFragment">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MediumTextBlack"
            android:text="@string/str_how_do_you_want_to_pay" />
        <TextView
            style="@style/RegularTextBlack"
            android:text="@string/str_you_choose_to_pay"
            android:layout_marginTop="3dp"
            android:id="@+id/youChooseToPay"/>
        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/paymentAmount"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:maxLength="50"
            app:imeOptions="actionNext"
            app:inputType="number"
            app:labelText="@string/str_payment_amount"

            />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/nameOnCard"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:maxLength="50"
            app:imeOptions="actionNext"
            app:inputType="text"
            app:labelText="@string/str_name_on_card"

            />
        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/cardNumber"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:maxLength="19"
            app:imeOptions="actionNext"
            app:inputType="number"
            app:labelText="@string/str_card_number"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:text="@string/str_accept_card_types"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/allcardsaccepted"
            android:layout_marginTop="3dp"/>


        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/expiryDate"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:maxLength="5"
            app:imeOptions="actionNext"
            app:inputType="number"
            app:labelText="@string/str_expiry_date"

            />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/cardSecurityCode"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:maxLength="4"
            app:imeOptions="actionNext"
            app:inputType="number"
            app:labelText="@string/card_security_code"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:text="@string/last_three_digit"/>

        <com.conduent.apollo.ui.CMButton
            android:id="@+id/proceddWithPayment"
            style="@style/PrimaryButton"
            android:enabled="false"
            android:layout_marginTop="16dp"
            android:text="@string/proceed_with_payment"/>
        <com.conduent.apollo.ui.CMButton
            style="@style/PrimaryButton"
            android:background="#E0E0E0"
            android:backgroundTint="#E0E0E0"
            android:visibility="gone"
            android:text="@string/pay_sample"
            android:textColor="#AC352F"/>
    </LinearLayout>
</ScrollView>

</layout>