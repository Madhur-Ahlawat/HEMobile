<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="3dp"
        android:translationZ="2dp"
        android:id="@+id/materialToolbar"
        android:theme="@style/Theme.ToolBar"
        android:contentInsetStart="@dimen/margin_0dp"
        android:contentInsetLeft="@dimen/margin_0dp"
        android:contentInsetRight="@dimen/margin_0dp"
        android:contentInsetEnd="@dimen/margin_0dp"
        app:contentInsetLeft="@dimen/margin_0dp"
        app:contentInsetStart="@dimen/margin_0dp"
        app:contentInsetRight="@dimen/margin_0dp"
        app:contentInsetEnd="@dimen/margin_0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/margin_48dp"
                android:layout_height="@dimen/margin_48dp"
                android:padding="@dimen/margin_11dp"
                android:contentDescription="@string/str_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_back_arrow_white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_backText"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:text="@string/str_back"
                app:fontFamily="@font/sfbold"
                android:visibility="gone"
                android:textSize="17sp"
                android:fontFamily="@font/sfregular"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_back_arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="@dimen/margin_48dp"
                android:paddingEnd="@dimen/margin_48dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="@string/app_name" />


        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>
</layout>