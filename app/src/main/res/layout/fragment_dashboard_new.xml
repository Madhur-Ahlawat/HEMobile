                        android:contentDescription="@string/txt_topup_method_"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:text="@string/txt_topup_method"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/font_12sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/v_autopay" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_cardType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_18dp"
                android:layout_marginBottom="@dimen/margin_1dp"
                android:background="@drawable/bg_rounded_corner_6dp"
                android:elevation="@dimen/margin_2dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:importantForAccessibility="yes"
                android:paddingVertical="@dimen/margin_2dp"
                app:layout_constraintEnd_toEndOf="@id/box_accountInformation"
                app:layout_constraintStart_toStartOf="@id/box_accountInformation"
                app:layout_constraintTop_toBottomOf="@+id/threeBoxCl">

                <ImageView
                    android:id="@+id/cardLogo"
                    android:layout_width="@dimen/margin_50dp"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_marginStart="@dimen/margin_11dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginBottom="@dimen/margin_9dp"
                    android:importantForAccessibility="no"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/visablue" />

                <View
                    android:id="@+id/viewCard"
                    android:layout_width="@dimen/margin_10dp"
                    android:layout_height="0dp"
                    android:importantForAccessibility="no"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cardLogo"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/cardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_11dp"
                    android:layout_marginStart="@dimen/margin_11dp"
                    android:fontFamily="@font/open_sans"
                    android:importantForAccessibility="no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/cardLogo"
                    app:layout_constraintStart_toEndOf="@+id/viewCard"
                    app:layout_constraintTop_toTopOf="@id/cardLogo"
                    tools:text="CASH" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_viewAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="@dimen/margin_1dp"
                app:layout_constraintEnd_toEndOf="@id/box_accountInformation"
                app:layout_constraintStart_toStartOf="@id/box_accountInformation"
                app:layout_constraintTop_toBottomOf="@+id/box_cardType">

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/box_recentTransactions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="bottom"
                    android:minHeight="@dimen/margin_48dp"
                    android:text="@string/txt_recent_transacions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/label_viewAll"
                    app:layout_constraintRight_toLeftOf="@id/label_viewAll"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/label_viewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="bottom"
                    android:minWidth="@dimen/margin_50dp"
                    android:minHeight="@dimen/margin_48dp"
                    android:paddingVertical="@dimen/margin_5dp"
                    android:text="@string/view_all"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box_viewAll">

                <ImageView
                    android:id="@+id/ivNoTransactions"
                    android:layout_width="@dimen/margin_73dp"
                    android:layout_height="@dimen/margin_73dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:src="@drawable/error_blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/tvNoTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="@string/str_no_transactions_to_view"
                    android:textColor="@color/new_btn_color"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivNoTransactions" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recenrTransactions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box_viewAll"
                tools:itemCount="1"
                tools:listitem="@layout/item_crossings"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>