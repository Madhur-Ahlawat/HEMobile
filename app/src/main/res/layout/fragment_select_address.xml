<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp">


                <TextView
                    android:id="@+id/txtAddressCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_three_address_found"
                    android:layout_marginHorizontal="20dp"

                    style="@style/MediumTextBlack"
                    />

                <TextView
                    android:id="@+id/select_your_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAddressCount"
                    android:text="@string/str_select_your_address"
                    style="@style/RegularTextBlack"
                    android:layout_marginHorizontal="20dp"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recylcerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/adapter_select_address"
                    android:layout_below="@id/select_your_address"
                    android:layout_above="@id/see_text"
                    android:layout_marginHorizontal="15dp"

                    android:layout_marginTop="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_if_you_dont_see"
                    android:layout_above="@id/btn_next"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="20dp"

                    android:id="@+id/see_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    />


                <com.conduent.apollo.ui.CMButton
                    android:id="@+id/btn_next"
                    style="@style/PrimaryButton"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="@string/str_continue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginHorizontal="20dp"

                    android:layout_above="@id/enter_address_manually"

                    />

                <com.conduent.apollo.ui.CMButton
                    android:id="@+id/enter_address_manually"
                    style="@style/secondaryButton"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"

                    android:text="@string/str_enter_address_manually"
                    />
            </RelativeLayout>


        </LinearLayout>
</layout>

