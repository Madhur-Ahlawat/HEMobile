<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:background="@color/blue_color"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/margin_6dp"
            android:id="@+id/iv_mark_as_read"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_mark_as_read"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintTop_toTopOf="@id/iv_mark_as_read"
            app:layout_constraintStart_toStartOf="@id/iv_mark_as_read"
            app:layout_constraintEnd_toEndOf="@id/iv_mark_as_read"
            android:text="Mark as\nread"
            android:textSize="@dimen/font_20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>