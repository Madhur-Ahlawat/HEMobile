            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="3dp"
                android:importantForAccessibility="no"
                app:cardCornerRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout style="@style/account_summary_layer_cl_style">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/twoStepVerificationCl"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:importantForAccessibility="yes"
                        android:padding="@dimen/margin_5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/editTwoStepVerification"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txtTwoStepVerification"
                            style="@style/MediumTextBlack"
                            android:focusable="false"
                            android:text="@string/two_step_verification"
                            android:textSize="@dimen/font_15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/twoStepVerification"
                            style="@style/RegularTextBlack"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:focusable="false"
                            android:text="@string/yes"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtTwoStepVerification" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/editTwoStepVerification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/str_edit"
                        android:minWidth="@dimen/margin_48dp"
                        android:minHeight="@dimen/margin_48dp"
                        android:padding="@dimen/margin_20dp"
                        android:src="@drawable/edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/biometricsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="3dp"
                android:importantForAccessibility="no"
                android:visibility="gone"
                app:cardCornerRadius="5dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout style="@style/account_summary_layer_cl_style">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/biometricsCl"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:importantForAccessibility="yes"
                        android:padding="@dimen/margin_5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/editBiometrics"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txtBiometrics"
                            style="@style/MediumTextBlack"
                            android:focusable="false"
                            android:text="@string/biometrics"
                            android:textSize="@dimen/font_15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/biometrics"
                            style="@style/RegularTextBlack"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:focusable="false"
                            android:text="@string/yes"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtBiometrics" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/editBiometrics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/str_edit"
                        android:minWidth="@dimen/margin_48dp"
                        android:minHeight="@dimen/margin_48dp"
                        android:padding="@dimen/margin_20dp"
                        android:src="@drawable/edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vehicleHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/vehicle_details"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:nestedScrollingEnabled="false" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBoxTerms"
                style="@style/CheckBoxStyle"
                android:layout_marginTop="@dimen/margin_30dp"
                android:checked="false"
                android:gravity="center|start"
                android:text="@string/i_accept_the_terms_conditions"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />


            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/btnNext"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_50sdp"
                android:enabled="false"
                android:text="@string/str_continue"
                app:radius="5dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>