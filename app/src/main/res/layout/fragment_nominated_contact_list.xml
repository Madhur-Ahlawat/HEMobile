<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nominated_contact_list"
        android:textColor="@color/black"
        android:textSize="@dimen/_21sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        app:layout_constraintTop_toTopOf="@+id/glTop" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnActive"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_38sdp"
        app:cornerRadius="@dimen/_13sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:backgroundTint="@color/green"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="@string/str_active_small"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInvited"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="@dimen/_64sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="@string/str_invited"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_13sdp"
        app:layout_constraintStart_toEndOf="@+id/btnActive"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNominatedContact"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        app:layout_constraintTop_toBottomOf="@+id/btnActive" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNominatedContact"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/str_nominated_contacts"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_6sdp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/glBottom"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp" />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_12sdp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_12sdp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/_6sdp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/_6sdp" />


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
