<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_18dp"
            android:paddingEnd="@dimen/margin_20dp"
            android:paddingBottom="@dimen/margin_18dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/isYourVehicle"
                style="@style/MediumTextBlack"
                android:text="@string/str_is_this_your_vehicle_looking_for"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintTop_toBottomOf="@id/isYourVehicle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_20dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehicleRegNum"
                        style="@style/MediumTextBlack"
                        android:text="@string/vehicle_reg_number"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/reg_num"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:textAllCaps="true"
                        android:textAllCaps="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vehicleRegNum" />

                    <View
                        android:id="@+id/seperator1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_3_5dp"
                        android:background="@color/color_E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/reg_num" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/typeOfVeh"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:text="@string/type_of_vehicle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/seperator1" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/typeOfVehicle"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/typeOfVeh" />

                    <View
                        android:id="@+id/seperator2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:visibility="gone"

                        android:layout_marginTop="@dimen/margin_3_5dp"
                        android:background="@color/color_E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/typeOfVehicle" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/str_make"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_22dp"
                        android:text="@string/str_make"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/seperator2" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehicleMake"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/str_make" />
                    <View
                        android:id="@+id/seperator3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginTop="@dimen/margin_3_5dp"
                        android:visibility="gone"
                        android:background="@color/color_E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleMake" />
                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/str_model"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_22dp"
                        android:text="@string/str_model"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/seperator3" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehicleModel"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/str_model" />
                    <View
                        android:id="@+id/seperator4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:visibility="gone"

                        android:layout_marginTop="@dimen/margin_3_5dp"
                        android:background="@color/color_E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleModel" />
                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/str_color"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_22dp"
                        android:text="@string/str_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/seperator4" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehicleColor"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/str_color" />
                    <View
                        android:id="@+id/seperator5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_3_5dp"
                        android:background="@color/color_E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleColor" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/confirmBtn"
                style="@style/PrimaryButton"
                android:text="@string/str_yes"
                android:layout_marginTop="@dimen/margin_40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView" />

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/notVehicle"
                style="@style/secondaryButton"
                android:text="@string/str_no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmBtn" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/inCorrectVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:paddingTop="@dimen/margin_15dp"
                android:paddingBottom="@dimen/margin_15dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="@string/str_incorrect_vehicle_registration"
                android:textColor="@color/new_btn_color"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notVehicle"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>