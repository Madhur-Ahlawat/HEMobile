<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_EFEFEF">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pay_dart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="start"
            android:text="@string/str_pay_dart_ford_crossing"
            android:textColor="@color/color_D8000000"
            android:textSize="@dimen/_11ssp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_title_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="start"
            android:text="@string/str_what_would_you_like_to_do"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_dart_txt" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_title_lyt">

            <!--  <com.google.android.material.card.MaterialCardView
                  android:layout_width="match_parent"
                  android:paddingStart="@dimen/_27sdp"
                  android:paddingEnd="@dimen/_10sdp"
                  android:backgroundTint="@color/white"
                  android:layout_height="@dimen/_35sdp">
  -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/str_create_account"
                android:textColor="@color/black"
                app:buttonTint="@color/bottomActiveColor"
                android:textSize="@dimen/_13ssp" />


            <!--
                        </com.google.android.material.card.MaterialCardView>
            -->

            <!-- <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:paddingStart="@dimen/_27sdp"
                 android:paddingEnd="@dimen/_10sdp"
                 android:backgroundTint="@color/white"
                 android:layout_height="@dimen/_35sdp">
 -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_one_of_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                app:buttonTint="@color/bottomActiveColor"
                android:text="@string/str_make_one_of_payment"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <!--  </com.google.android.material.card.MaterialCardView>
              <com.google.android.material.card.MaterialCardView
                  android:layout_width="match_parent"
                  android:paddingStart="@dimen/_27sdp"
                  android:paddingEnd="@dimen/_10sdp"
                  android:backgroundTint="@color/white"
                  android:layout_height="@dimen/_35sdp">
  -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_resolve_penalty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                app:buttonTint="@color/bottomActiveColor"
                android:text="@string/str_resolve_penalty_charge"
                android:textColor="@color/black"

                android:textSize="@dimen/_13ssp" />


            <!-- </com.google.android.material.card.MaterialCardView>
             <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:paddingStart="@dimen/_27sdp"
                 android:paddingEnd="@dimen/_10sdp"
                 android:backgroundTint="@color/white"
                 android:layout_height="@dimen/_35sdp">
 -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_check_for_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                app:buttonTint="@color/bottomActiveColor"
                android:text="@string/str_check_for_paid_crossing"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <!--  </com.google.android.material.card.MaterialCardView>
              <com.google.android.material.card.MaterialCardView
                  android:layout_width="match_parent"
                  android:paddingStart="@dimen/_27sdp"
                  android:paddingEnd="@dimen/_10sdp"
                  android:backgroundTint="@color/white"
                  android:layout_height="@dimen/_35sdp">
  -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_view_charges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                app:buttonTint="@color/bottomActiveColor"
                android:text="@string/str_view_charges"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <!--
                        </com.google.android.material.card.MaterialCardView>
            -->


        </RadioGroup>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:backgroundTint="@color/btn_selector"
            android:enabled="false"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="@string/str_continue"
            android:textAllCaps="false"
            android:textColor="@color/color_7D7D7D"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_group" />/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>