<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_24dp"
            android:paddingEnd="@dimen/margin_20dp"
            android:paddingBottom="@dimen/margin_18dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/isYourVehicle"
                style="@style/MediumTextBlack"
                android:text="@string/str_is_this_your_vehicle_looking_for"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_1dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_1dp"
                android:layout_marginBottom="@dimen/margin_1dp"
                app:cardCornerRadius="@dimen/margin_5dp"
                app:cardElevation="@dimen/margin_3dp"
                app:layout_constraintTop_toBottomOf="@id/isYourVehicle">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/margin_22dp"
                    android:paddingVertical="@dimen/margin_17dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehicleRegNum"
                        style="@style/MediumTextBlack"
                        android:text="@string/vehicle_registration_number_plate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/reg_num"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vehicleRegNum"
                        tools:text="ASXCD" />


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/typeOfVeh"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:text="@string/type_of_vehicle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reg_num" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/typeOfVehicle"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/typeOfVeh"
                        tools:text="ABCABC" />


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/str_make"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_22dp"
                        android:text="@string/str_make"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/typeOfVehicle" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehicleMake"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:text="DFCV"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/str_make" />


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/str_model"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_22dp"
                        android:text="@string/str_model"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vehicleMake" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehicleModel"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/str_model" />


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/str_color"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_22dp"
                        android:text="@string/str_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vehicleModel" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/vehicleColor"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/str_color" />


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/str_effective_date"
                        style="@style/MediumTextBlack"
                        android:layout_marginTop="@dimen/margin_22dp"
                        android:text="@string/str_effective_start_date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vehicleColor" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/str_effective_date_text"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_4dp"
                        tools:text="vv mm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/str_effective_date" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/confirmBtn"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24dp"
                android:elevation="@dimen/margin_1dp"
                android:text="@string/str_remove_vehicle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView" />

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/notVehicle"
                style="@style/secondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:elevation="@dimen/margin_1dp"
                android:text="@string/str_cancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmBtn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>