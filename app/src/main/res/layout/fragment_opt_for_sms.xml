<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isOpted"
            type="com.conduent.nationalhighways.data.model.account.AccountCreateRequestModel.UserInfoModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/SemiBoldText"
            android:textColor="@color/black"
            android:text="@string/would_you_like_to_receive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message_received_txt"
            style="@style/RegularText"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="@string/this_will_be_in_addition"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_title" />

        <RadioGroup
            android:id="@+id/radioGroupYesNo"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/btnNext"
            app:layout_constraintStart_toStartOf="@+id/btnNext"
            app:layout_constraintTop_toBottomOf="@+id/message_received_txt" >
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                style="@style/RadioButtonStyle"
                android:text="Yes"
                android:checked="false"
                android:id="@+id/radioButtonYes"
                android:layout_height="@dimen/margin_50dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:text="No"
                style="@style/RadioButtonStyle"
                android:id="@+id/radioButtonNo"
                android:layout_marginTop="2dp"
                android:layout_height="@dimen/margin_50dp"/>

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkBoxTerms"
            style="@style/CheckBoxStyle"
            android:checked="true"
            android:text="@string/agree_terms_condition"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupYesNo"
            tools:visibility="visible" />

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnNext"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/str_continue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxTerms"
            app:radius="5dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>