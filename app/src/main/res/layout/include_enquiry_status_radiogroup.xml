<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp">
        <com.conduent.nationalhighways.utils.widgets.NHRadioGroup
            android:id="@+id/raise_request_radio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center"
            android:longClickable="false"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.conduent.nationalhighways.utils.widgets.NHRadioButton
                android:id="@+id/category_rb"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_left_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="@string/str_category"
                android:textColor="@drawable/radio_text_color" />

            <com.conduent.nationalhighways.utils.widgets.NHRadioButton
                android:id="@+id/comments_rb"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_center_selector"
                android:button="@null"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="@string/str_comments"
                android:textColor="@drawable/radio_text_color" />

            <com.conduent.nationalhighways.utils.widgets.NHRadioButton
                android:id="@+id/summary_rb"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_right_selector"
                android:button="@null"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="@string/str_summary"
                android:textColor="@drawable/radio_text_color" />
        </com.conduent.nationalhighways.utils.widgets.NHRadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>