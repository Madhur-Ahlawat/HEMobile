<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="20dp"
            tools:context=".ui.account.creation.newAccountCreation.MaximumVehicleNumberFragment">

            <ImageView
                android:id="@+id/warningIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:src="@drawable/warningicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/maximumVehicleAdded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/str_your_account_has_been_suspended"
                android:textColor="@color/new_btn_color"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/warningIcon" />

            <TextView
                android:id="@+id/textMaximumVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/open_sans"

                android:lineSpacingExtra="2dp"
                android:text="@string/str_you_have_reached_the_maximum_vehicle"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/maximumVehicleAdded" />

            <TextView
                android:id="@+id/maximumVehicleAddedNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/str_vehicle_already_note_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp"
                app:layout_constraintTop_toBottomOf="@id/textMaximumVehicle"

                />

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/btnContinue"
                style="@style/PrimaryButton"
                android:layout_marginTop="@dimen/_70dp"
                android:text="@string/str_continue"
                app:layout_constraintBottom_toTopOf="@id/cancel_btn"
                app:layout_constraintStart_toStartOf="parent" />

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/cancel_btn"
                style="@style/secondaryButton"
                android:text="@string/str_cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/inCorrectVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="@string/str_incorrect_vehicle_registration"
                android:textColor="@color/new_btn_color"
                android:textSize="14sp"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>

</layout>