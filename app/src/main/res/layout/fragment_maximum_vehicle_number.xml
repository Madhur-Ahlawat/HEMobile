<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingEnd="@dimen/margin_20dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_ll"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_5dp">


                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/maximumVehicleAdded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/warningicon"
                    android:drawablePadding="@dimen/margin_23dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:text="@string/str_your_account_has_been_suspended"
                    android:textColor="@color/new_btn_color"
                    android:textSize="@dimen/font_16sp" />


                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/textMaximumVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_35dp"
                    android:fontFamily="@font/open_sans"
                    android:lineSpacingExtra="@dimen/margin_2dp"
                    android:text="@string/str_you_have_reached_the_maximum_vehicle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_35dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/margin_2dp"
                    android:text="@string/str_you_have_reached_the_maximum_vehicle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    android:visibility="visible" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/maximumVehicleAddedNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_35dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/str_vehicle_already_note_desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"

                    />


            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_35dp">

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/btnContinue"
                style="@style/PrimaryButton"
                android:text="@string/str_continue" />

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/cancel_btn"
                style="@style/secondaryButton"
                android:text="@string/str_cancel" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/inCorrectVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/margin_15dp"
                android:paddingBottom="@dimen/margin_15dp"
                android:text="@string/str_incorrect_vehicle_registration"
                android:textColor="@color/new_btn_color"
                android:textSize="@dimen/font_14sp"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</layout>