<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintHeight_max="wrap">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="@string/str_allow_location_title"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_15dp"
                android:paddingBottom="@dimen/margin_25dp"

                >

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="@string/str_allow_location_desc"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/back_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:id="@+id/firstView"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="#8F8F8F"
                    android:alpha="0.3" />

                <LinearLayout
                    android:id="@+id/rebooking_back_button_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ok_btn"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/margin_50dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:text="@string/str_change_to_always_allow"
                        android:textAlignment="center"
                        android:textColor="@color/hyperlink_blue2"
                        android:textSize="@dimen/font_17sp"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:background="#8F8F8F"
                        android:alpha="0.3" />

                    <TextView
                        android:id="@+id/cancel_btn"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/margin_50dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:text="@string/str_opt_out"
                        android:textAlignment="center"
                        android:textColor="@color/color_E30000"
                        android:textSize="@dimen/font_17sp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>