<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="model"
            type="com.conduent.nationalhighways.data.model.profile.ProfileDetailModel" />

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/he_bg"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/he_bg"
            android:padding="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:id="@+id/rlFirstName"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="First name"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@{model.personalInformation.firstName}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewFirstName"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlFirstName"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlFirstName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <RelativeLayout
                android:id="@+id/rlLastName"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlFirstName">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Last name"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@{model.personalInformation.lastName}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewLastName"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlLastName"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlLastName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlEmailId"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlLastName">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Email Id"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEmailId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@{model.personalInformation.emailAddress}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewEmailId"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlEmailId"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlEmailId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlModelNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:paddingStart="16dp"
                android:background="@color/white"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlEmailId">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Model number"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvModelNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:text="@{model.accountInformation.number}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewModelNo"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlModelNo"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlModelNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlEveningNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlModelNo">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Evening number"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEveningNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:text="@{model.personalInformation.eveningPhone}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewEveningNo"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlEveningNo"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlEveningNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlPostCode"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlEveningNo">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Post code"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPostCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:text="@{model.personalInformation.zipcode}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewPostCode"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlPostCode"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlPostCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlPostCode">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:layout_centerVertical="true"
                    android:text="@{model.personalInformation.addressLine1}"
                    android:inputType="textMultiLine"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewAddress"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlAddress"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlDartPin"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:visibility="gone"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlAddress">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Dart Pin"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="numberPassword"
                    android:text="@{model.personalInformation.securityPin}"
                    android:textColor="#474747"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewDartPin"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlDartPin"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlDartPin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlPassword"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlDartPin">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPasswordPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="textPassword"
                    android:text="@{model.accountInformation.password}"
                    android:textColor="#474747"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <View
                android:id="@+id/viewPassword"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlPassword"
                android:background="@color/blue_color"
                app:layout_constraintBottom_toBottomOf="@+id/rlPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditDetail"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:backgroundTint="@color/blue_color"
                android:gravity="center"
                android:text="@string/edit_details"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
