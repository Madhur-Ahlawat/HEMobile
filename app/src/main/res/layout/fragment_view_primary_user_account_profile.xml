<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="model"
            type="com.heandroid.data.model.profile.ProfileDetailModel" />

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/he_bg"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:id="@+id/rlFirstName"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="First name"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@{model.personalInformation.firstName}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewFirstName"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlFirstName"
                android:background="@color/color_EFEFEF"
                app:layout_constraintBottom_toBottomOf="@+id/rlFirstName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <RelativeLayout
                android:id="@+id/rlLastName"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlFirstName">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Last name"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@{model.personalInformation.lastName}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewLastName"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlLastName"
                android:background="@color/color_EFEFEF"
                app:layout_constraintBottom_toBottomOf="@+id/rlLastName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlEmailId"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlLastName">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Email Id"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEmailId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@{model.personalInformation.emailAddress}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewEmailId"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlEmailId"
                android:background="@color/color_EFEFEF"
                app:layout_constraintBottom_toBottomOf="@+id/rlEmailId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlModelNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:paddingStart="16dp"
                android:background="@color/white"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlEmailId">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Mobile number"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvModelNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:text="@{model.accountInformation.number}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewModelNo"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlModelNo"
                android:background="@color/color_EFEFEF"
                app:layout_constraintBottom_toBottomOf="@+id/rlModelNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlEveningNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlModelNo">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Evening number"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEveningNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:text="@{model.personalInformation.eveningPhone}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewEveningNo"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlEveningNo"
                android:background="@color/color_EFEFEF"
                app:layout_constraintBottom_toBottomOf="@+id/rlEveningNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <RelativeLayout
                android:id="@+id/rlPostCode"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlEveningNo">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Post code"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPostCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:text="@{model.personalInformation.zipcode}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewPostCode"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlPostCode"
                android:background="@color/color_EFEFEF"
                app:layout_constraintBottom_toBottomOf="@+id/rlPostCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlPostCode">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:text="@{model.personalInformation.addressLine1}"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <View
                android:id="@+id/viewAddress"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignBottom="@+id/rlAddress"
                android:background="@color/color_EFEFEF"
                app:layout_constraintBottom_toBottomOf="@+id/rlAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditDetail"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:backgroundTint="@color/btn_color"
                android:gravity="center"
                android:text="@string/edit_details"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toTopOf="@+id/glBottom"
                app:layout_constraintEnd_toStartOf="@+id/glEnd"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/glStart" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_12sdp" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_12sdp" />



            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/_11sdp" />






        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
