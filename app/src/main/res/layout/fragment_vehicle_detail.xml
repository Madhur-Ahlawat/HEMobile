            android:layout_marginEnd="@dimen/_20sdp"
            android:gravity="start"
            android:text="@string/str_ur_vehicles"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <LinearLayout
