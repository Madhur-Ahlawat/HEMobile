<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/margin_16dp"
        tools:background="@drawable/he_bg"
        android:paddingEnd="@dimen/margin_20dp">

        <TextView
            android:id="@+id/txtHeading"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:text="What type of account would you like?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/viewPrePay"
            layout="@layout/layout_account_type_view"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHeading" />

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewPayAsYouGo"
            android:layout_marginTop="@dimen/margin_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPrePay"
            app:cardCornerRadius="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_18dp"
                android:paddingTop="@dimen/margin_12dp"
                android:paddingBottom="@dimen/margin_20dp"
                android:paddingEnd="@dimen/margin_20dp">

                <TextView
                    android:id="@+id/txtTitle"
                    style="@style/BoldText"
                    android:layout_width="0dp"
                    android:textSize="@dimen/font_18sp"
                    android:text="Pay as you go"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/RegularText"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:drawableLeft="@drawable/circle_black_5dp"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:textColor="@color/black"
                    android:text="No initial payment required"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitle" />


                <TextView
                    android:id="@+id/textView4"
                    style="@style/RegularText"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:drawableLeft="@drawable/circle_black_5dp"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:textColor="@color/black"
                    android:text="Suitable for occasional users"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_black_5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/textView5"
                    app:layout_constraintVertical_bias="0.32999998" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/RegularText"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:textColor="@color/black"
                    android:text="Your payment gets taken automatically after your crossing."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />


                <TextView
                    android:id="@+id/textView6"
                    style="@style/RegularText"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:drawableLeft="@drawable/circle_black_5dp"
                    android:gravity="top"
                    android:text="No discount"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtTitle"
                    app:layout_constraintEnd_toEndOf="@+id/txtTitle"
                    app:layout_constraintTop_toTopOf="@+id/txtTitle"
                    android:src="@drawable/ic_right_arrow" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtCrossingInfo"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:text="@string/crossing_charges_per_account"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPayAsYouGo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>