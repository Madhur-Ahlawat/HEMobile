<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26dp"
            android:layout_marginTop="@dimen/_17dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/dartford_crossing_is_a_free_flow_crossing"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />

        <RelativeLayout
            android:id="@+id/layout_dart_charge_general"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_62dp"
            android:layout_marginHorizontal="@dimen/_26dp"
            android:layout_marginTop="@dimen/_22dp"
            android:background="@drawable/bg_rounded_corner_5dp"
            android:elevation="@dimen/_2dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_21dp"
                android:fontFamily="@font/open_sans"
                android:text="Dart Charge general Terms and Conditions"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <ImageView
                android:id="@+id/btnAboutThisService"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_19dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_62dp"
            android:layout_marginHorizontal="@dimen/_26dp"
            android:layout_marginTop="@dimen/_9dp"
            android:background="@drawable/bg_rounded_corner_5dp"
            android:elevation="@dimen/_2dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_21dp"
                android:fontFamily="@font/open_sans"
                android:text="Dart Charge privacy policy"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <ImageView
                android:id="@+id/btnContactDartCharge"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_19dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/termsandconditions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_62dp"
            android:layout_marginHorizontal="@dimen/_26dp"
            android:layout_marginTop="@dimen/_9dp"
            android:background="@drawable/bg_rounded_corner_5dp"
            android:elevation="@dimen/_2dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_21dp"
                android:fontFamily="@font/open_sans"
                android:text="Terms and conditions for PAYG"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <ImageView
                android:id="@+id/btnUnderstandingChargesAndFines"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_19dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>