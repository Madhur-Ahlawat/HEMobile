<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_20dp"
        android:paddingRight="@dimen/margin_20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_17dp"
            android:fontFamily="@font/open_sans"
            android:visibility="gone"
            android:text="@string/dartford_crossing_is_a_free_flow_crossing"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14sp" />

        <RelativeLayout
            android:id="@+id/layout_dart_charge_general"
            android:layout_width="match_parent"
            android:minHeight="@dimen/margin_62dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_22dp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:background="@drawable/bg_rounded_corner_5dp"
            android:elevation="@dimen/margin_2dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/btnAboutThisService"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_21dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/dart_charge_general_terms_and_conditions"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp" />

            <ImageView
                android:id="@+id/btnAboutThisService"
                android:layout_width="@dimen/margin_50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/margin_19dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/privacy_policy"
            android:layout_width="match_parent"
            android:minHeight="@dimen/margin_62dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_9dp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:background="@drawable/bg_rounded_corner_5dp"
            android:elevation="@dimen/margin_2dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btnContactDartCharge"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_21dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/dart_charge_privacy_policy"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp" />

            <ImageView
                android:id="@+id/btnContactDartCharge"
                android:layout_width="@dimen/margin_50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/margin_19dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/termsandconditions"
            android:layout_width="match_parent"
            android:minHeight="@dimen/margin_62dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_9dp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:background="@drawable/bg_rounded_corner_5dp"
            android:elevation="@dimen/margin_2dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_toStartOf="@+id/btnUnderstandingChargesAndFines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_21dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/terms_and_conditions_for_payg"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp" />

            <ImageView
                android:id="@+id/btnUnderstandingChargesAndFines"
                android:layout_width="@dimen/margin_50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/margin_19dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>