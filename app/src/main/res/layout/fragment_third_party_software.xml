<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/text_terms_and_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_26dp"
            android:layout_marginEnd="@dimen/margin_42dp"
            android:textColorLink="@color/btn_color"
            android:fontFamily="@font/open_sans"
            android:text="@string/third_party_software_full_message"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14sp" />

    </LinearLayout>
</layout>