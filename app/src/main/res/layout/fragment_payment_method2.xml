<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/margin_18dp"
            android:paddingTop="@dimen/margin_20dp"
            android:paddingEnd="@dimen/margin_18dp"
            android:paddingBottom="@dimen/margin_20dp"
            tools:context=".ui.payment.newpaymentmethod.NewPaymentMethodFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/layout">

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/payment_method_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/payment_method_information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/paymentRecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_18dp"
                    tools:itemCount="1"
                    tools:listitem="@layout/paymentmethodadapterlayout"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/payment_method_information" />


                <TextView
                    android:id="@+id/maximumVehicleAdded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_100dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:text="@string/str_you_have_no_payment_method"
                    android:textColor="@color/new_btn_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/font_16sp"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:drawablePadding="@dimen/margin_23dp"
                    app:drawableTopCompat="@drawable/warningicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/maximumVehicleAdded"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/str_you_must_pay"
                    android:lineSpacingExtra="@dimen/margin_2dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin_17dp"
                    android:textSize="@dimen/font_14sp"
                    android:id="@+id/textMaximumVehicle" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/addNewPaymentMethod"
                style="@style/PrimaryButton"
                android:text="@string/add_new_payment_method"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewThresholdLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_74dp"
                android:layout_marginHorizontal="@dimen/margin_1dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:elevation="@dimen/margin_3dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardCornerRadius="@dimen/margin_5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addNewPaymentMethod"
                android:layout_marginBottom="@dimen/margin_5dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/tv_select_payment_method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_18dp"
                        android:layout_marginEnd="@dimen/margin_18dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/set_threshold_limit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/forward"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/forward"
                        android:layout_width="@dimen/margin_48dp"
                        android:layout_height="@dimen/margin_48dp"
                        android:padding="@dimen/margin_15dp"
                        android:src="@drawable/ic_right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewTopYourBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_74dp"
                android:layout_marginHorizontal="@dimen/margin_1dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:elevation="@dimen/margin_3dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardCornerRadius="@dimen/margin_5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardViewThresholdLimit"
                android:layout_marginBottom="@dimen/margin_5dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/tv_topUpYourBalance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_18dp"
                        android:layout_marginEnd="@dimen/margin_18dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/top_up_your_balance"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/forward_top_balance"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/forward_top_balance"
                        android:layout_width="@dimen/margin_48dp"
                        android:layout_height="@dimen/margin_48dp"
                        android:padding="@dimen/margin_15dp"
                        android:src="@drawable/ic_right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>