<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_12sdp"
    android:background="@color/white">

    <com.heandroid.ui.customviews.CustomTextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingEnd="@dimen/_6sdp"
        android:text="14 Dec 12:34"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/green_view"
        app:layout_constraintTop_toTopOf="parent" />


    <com.heandroid.ui.customviews.CustomTextView
        android:id="@+id/message_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="Phasellas id urna frimgella, imperdlet ex at please do topup."
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/green_view"
        android:textSize="@dimen/_16ssp"
        android:paddingEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_txt" />


    <View
        android:layout_width="@dimen/_8sdp"
        android:layout_height="0dp"
        android:id="@+id/green_view"
        android:background="@color/green"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/message_txt"
        app:layout_constraintTop_toTopOf="@+id/date_txt"/>


</androidx.constraintlayout.widget.ConstraintLayout>