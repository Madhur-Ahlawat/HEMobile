<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/margin_18dp"
            android:paddingTop="@dimen/margin_20dp"
            android:paddingEnd="@dimen/margin_18dp"
            android:paddingBottom="@dimen/margin_20dp">

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/tv_enter_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12dp"
                android:text="@string/str_enter_amount_you_want_to_pop_up"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/topBalance"
                style="@style/input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_40dp"
                android:maxLength="10"
                android:textSize="@dimen/font_16sp"
                app:imeOptions="actionDone"
                app:inputType="numberDecimal"
                app:labelText="@string/str_payment_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_enter_amount"
                app:maxLength="10" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/tv_select_payment_method"
                style="@style/Widget.HeMobile.TextInputLayout.Dark_Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24_32dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/str_select_payment_method"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topBalance" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recyclerViewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp"
                app:layout_constraintTop_toBottomOf="@id/tv_select_payment_method">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_payment_methods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_payment_method" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/noCardFoundLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="visible"
                    tools:context=".ui.account.creation.newAccountCreation.MaximumVehicleNumberFragment">

                    <TextView
                        android:id="@+id/maximumVehicleAdded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_23dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:drawablePadding="@dimen/margin_23dp"
                        android:text="@string/str_you_have_no_payment_method"
                        android:textColor="@color/new_btn_color"
                        android:textSize="@dimen/font_16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:drawableTopCompat="@drawable/warningicon" />

                    <TextView
                        android:id="@+id/textMaximumVehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_17dp"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:lineSpacingExtra="@dimen/margin_2dp"
                        android:text="@string/str_you_must_pay"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp"
                        app:layout_constraintTop_toBottomOf="@id/maximumVehicleAdded" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_17dp"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:lineSpacingExtra="@dimen/margin_2dp"
                        android:text="@string/str_you_must_pay"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@id/textMaximumVehicle" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/btnContinue"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:text="@string/str_continue"
                android:textSize="@dimen/font_14sp"
                android:layout_marginTop="@dimen/margin_30dp"
                app:isEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewLayout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_15dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/btnContinue"
                app:layout_constraintStart_toStartOf="parent">

                <com.conduent.apollo.ui.CMButton
                    android:id="@+id/btnAddNewPayment"
                    style="@style/secondaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_new_payment_method"
                    android:textSize="@dimen/font_14sp"
                    app:isEnabled="true"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_0dp"
                    tools:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.conduent.apollo.ui.CMButton
                    android:id="@+id/btnMainAddNewPayment"
                    style="@style/PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_new_payment_method"
                    android:textSize="@dimen/font_14sp"
                    app:isEnabled="true"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_0dp"
                    tools:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>