<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingEnd="@dimen/margin_20dp"
        android:orientation="vertical">

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/tv_use_this_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_17dp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center_vertical"
            android:text="@string/str_use_this_service_to"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:src="@drawable/circle_5dp" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_7dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/str_about_this_service_1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:src="@drawable/circle_5dp" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_7dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/str_about_this_service_2"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:src="@drawable/circle_5dp" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_7dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/str_about_this_service_4"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:src="@drawable/circle_5dp" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_7dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/str_about_this_service_3"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>




        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50dp">

            <ImageView
                android:layout_width="@dimen/_54dp"
                android:layout_height="@dimen/_60dp"
                android:layout_gravity="center_vertical"
               android:layout_marginEnd="@dimen/_15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_exclaimation_black" />

            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_18dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/str_you_must_pay"
                android:textColor="@color/gray_707070"
                android:textSize="@dimen/_20sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/btn_learn_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_38dp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="@string/learn_more_about_dartford_crossing_amp_dart_charge"
            android:textColor="@color/blue_color"
            android:textColorLink="@color/blue_color"
            android:textSize="@dimen/font_14sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>