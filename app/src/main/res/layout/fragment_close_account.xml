<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_close_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/title"
                    style="@style/OpenSansBoldText"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_25dp"
                    android:layout_marginTop="@dimen/margin_115dp"
                    android:drawableTop="@drawable/warningicon"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:gravity="center"
                    android:text="@string/are_you_sure_you_want_to_close_your_dart_charge_account"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/message1"
                    style="@style/RegularTextBlack"
                    android:layout_marginHorizontal="@dimen/margin_27dp"
                    android:layout_marginTop="@dimen/margin_18dp"
                    android:gravity="center"
                    android:text="@string/any_remaining_credit_will_be_refunded_to_your_ndefault_payment_method"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/message2"
                    style="@style/RegularTextBlack"
                    android:layout_marginHorizontal="@dimen/margin_27dp"
                    android:layout_marginTop="@dimen/margin_18dp"
                    android:gravity="center"
                    android:text="@string/you_will_have_to_pay_for_any_future_crossings_nseparately"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/message1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btn_close_account"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_25dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:text="@string/str_close_account"
            app:layout_constraintBottom_toTopOf="@id/btn_continue" />

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btn_continue"
            style="@style/secondaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_25dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:text="@string/str_cancel"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>