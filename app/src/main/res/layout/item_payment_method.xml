<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_350dp"
    android:layout_height="@dimen/_74dp"
    android:background="@drawable/bg_card_type">

    <com.conduent.nationalhighways.utils.widgets.NHRadioButton
        android:id="@+id/radioButton_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12dp"
        android:src="@drawable/visablue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioButton_payment_method"
        app:layout_constraintTop_toTopOf="parent" />

    <com.conduent.nationalhighways.utils.widgets.NHTextView
        android:id="@+id/tv_select_payment_method"
        style="@style/Widget.HeMobile.TextInputLayout.Dark_Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8dp"
        android:text="@string/str_Mastercard"
        android:textColor="@color/grayColorIcon"
        android:textStyle="bold"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCardType"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>