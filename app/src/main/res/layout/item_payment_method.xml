<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_74dp"
        android:layout_marginHorizontal="@dimen/margin_2dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:screenReaderFocusable="false"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:id="@+id/layout"
        android:background="@drawable/bg_card_type">

        <com.conduent.nationalhighways.utils.widgets.NHRadioButton
            android:id="@+id/radioButton_payment_method"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minWidth="@dimen/margin_48dp"
            android:importantForAccessibility="yes"
            android:screenReaderFocusable="true"
            android:textColor="@color/transparent"
            android:layout_marginStart="@dimen/margin_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:buttonTint="@color/new_btn_color"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_80dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_select_payment_method"
            style="@style/Widget.HeMobile.TextInputLayout.Dark_Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            tools:text="Mastercard\n*****3456"
            android:importantForAccessibility="yes"
            android:textColor="@color/gray_707070"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/font_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCardType"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>