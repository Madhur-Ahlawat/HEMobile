<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.conduent.nationalhighways.ui.bottomnav.account.raiseEnquiry.viewModel.RaiseNewEnquiryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_20dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.bottomnav.account.raiseEnquiry.CasesEnquiryDetailsFragment">

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/enquiry_tv"
                    style="@style/SemiBoldTextBlack"
                    android:text="@string/str_enquiry"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/reference_number_cv"
                    style="@style/cardView_style"
                    android:layout_marginLeft="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/enquiry_tv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/reference_number_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">


                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/reference_number_tv"
                            style="@style/SemiBoldTextBlack"
                            android:layout_width="@dimen/margin_0dp"
                            android:text="@string/reference_number"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/reference_numberdata_tv"
                            style="@style/RegularTextBlack"
                            android:layout_width="0dp"
                            android:text="@{viewModel.enquiryDetailsModel.id}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/reference_number_tv" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/category_cv"
                    style="@style/cardView_style"
                    android:layout_marginLeft="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_marginRight="@dimen/margin_2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/reference_number_cv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/category_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">


                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/category_tv"
                            style="@style/SemiBoldTextBlack"
                            android:layout_width="@dimen/margin_0dp"
                            android:text="@string/str_category"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/category_data_tv"
                            style="@style/RegularTextBlack"
                            android:layout_width="0dp"
                            android:text="@{viewModel.enquiryDetailsModel.category}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/category_tv" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/subcategory_cv"
                    style="@style/cardView_style"
                    android:layout_marginLeft="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_marginRight="@dimen/margin_2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_cv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/subcategory_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">


                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/subcategory_tv"
                            style="@style/SemiBoldTextBlack"
                            android:layout_width="@dimen/margin_0dp"
                            android:text="@string/str_sub_category"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/subcategory_data_tv"
                            style="@style/RegularTextBlack"
                            android:layout_width="0dp"
                            android:text="@{viewModel.enquiryDetailsModel.subcategory}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/subcategory_tv" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/date_time_cv"
                    style="@style/cardView_style"
                    android:layout_marginLeft="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_marginRight="@dimen/margin_2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/subcategory_cv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/date_time_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">


                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/date_time_tv"
                            style="@style/SemiBoldTextBlack"
                            android:layout_width="@dimen/margin_0dp"
                            android:text="@string/str_date_time_submitted"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/date_time_data_tv"
                            style="@style/RegularTextBlack"
                            android:layout_width="0dp"
                            android:text="@{viewModel.enquiryDetailsModel.created}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/date_time_tv" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/status_enquiry_cv"
                    style="@style/cardView_style"
                    android:layout_marginLeft="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_marginRight="@dimen/margin_2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/date_time_cv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/status_enquiry_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">


                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/status_enquiry_tv"
                            style="@style/SemiBoldTextBlack"
                            android:layout_width="@dimen/margin_0dp"
                            android:text="@string/str_status_of_enquiry"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/status_enquiry_data_tv"
                            style="@style/RegularTextBlack"
                            android:layout_width="0dp"
                            android:text="@{viewModel.enquiryDetailsModel.status}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/status_enquiry_tv" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/date_enquiry_closed_cv"
                    style="@style/cardView_style"
                    android:layout_marginLeft="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_marginRight="@dimen/margin_2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/status_enquiry_cv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/date_enquiry_closed_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">


                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/date_enquiry_closed_tv"
                            style="@style/SemiBoldTextBlack"
                            android:layout_width="@dimen/margin_0dp"
                            android:text="@string/str_date_enquiry_closed"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/date_enquiry_closed_data_tv"
                            style="@style/RegularTextBlack"
                            android:layout_width="0dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/date_enquiry_closed_tv" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/details_enquiry_cv"
                    style="@style/cardView_style"
                    android:layout_marginLeft="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_marginRight="@dimen/margin_2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/date_enquiry_closed_cv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/details_enquiry_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15dp">


                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/details_enquiry_tv"
                            style="@style/SemiBoldTextBlack"
                            android:layout_width="@dimen/margin_0dp"
                            android:text="@string/details_of_enquiry"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.conduent.nationalhighways.utils.widgets.NHTextView
                            android:id="@+id/details_enquiry_data_tv"
                            style="@style/RegularTextBlack"
                            android:layout_width="0dp"
                            android:text="@{viewModel.enquiryDetailsModel.description}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/details_enquiry_tv" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <com.conduent.nationalhighways.utils.widgets.NHButton
                    android:id="@+id/btnNext"
                    style="@style/PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:text="@string/str_continue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details_enquiry_cv"
                    app:radius="@dimen/margin_5dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>