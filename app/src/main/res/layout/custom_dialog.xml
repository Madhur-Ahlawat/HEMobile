<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintHeight_max="wrap">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="asfdsf"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_15dp"
                android:paddingBottom="@dimen/margin_25dp"

                >

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="dasf"

                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/back_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:id="@+id/firstView"
                    android:layout_height="0.8dp"
                    android:background="#000000"
                    android:alpha="0.3" />

                <LinearLayout
                    android:id="@+id/rebooking_back_button_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cancel_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_12dp"
                        android:paddingBottom="@dimen/margin_12dp"
                        android:layout_weight=".49"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:paddingStart="@dimen/margin_2dp"
                        android:textAlignment="center"
                        android:textColor="@color/red_color"
                        android:textSize="@dimen/font_17sp" />

                    <View
                        android:layout_width="0.8dp"
                        android:id="@+id/secondView"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_3dp"
                        android:layout_marginRight="@dimen/margin_3dp"
                        android:background="#000000"
                        android:alpha="0.3" />

                    <TextView
                        android:id="@+id/ok_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingTop="@dimen/margin_12dp"
                        android:paddingBottom="@dimen/margin_12dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:text="@string/add"
                        android:paddingEnd="@dimen/margin_2dp"
                        android:textAlignment="center"
                        android:textColor="@color/hyperlink_blue2"
                        android:textSize="@dimen/font_17sp"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>