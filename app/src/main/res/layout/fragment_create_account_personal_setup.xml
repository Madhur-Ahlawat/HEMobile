<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="enable"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_16dp"
        android:paddingEnd="@dimen/margin_20dp"

        >

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/MediumTextBlack"
            android:id="@+id/what_type_of_account"
            android:text="@string/account_creation_what_type_of_account" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/what_type_of_account"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_16dp"
            android:elevation="@dimen/margin_2dp"
            android:id="@+id/prePayCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_prepay"
                    style="@style/MediumTextBlack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginStart="@dimen/margin_19dp"
                    android:id="@+id/prePay" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_14dp"
                    android:layout_marginEnd="@dimen/margin_19dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/textView1"
                    style="@style/RegularTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:drawableStart="@drawable/circle_5dp"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_15dp"

                    android:text="@string/an_email_address_to_receive_a_code"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/prePay" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/textView2"
                    style="@style/RegularTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:drawableStart="@drawable/circle_5dp"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_8dp"

                    android:text="@string/an_email_address_to_receive_a_code"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/textView3"
                    style="@style/RegularTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:drawableStart="@drawable/circle_5dp"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="@string/str_get_a_discount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/textView4"
                    style="@style/RegularTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:drawableStart="@drawable/circle_5dp"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="@string/str_your_accounts_get_top_up"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>