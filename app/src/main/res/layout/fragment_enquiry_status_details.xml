<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="start|top"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_23dp">


            <com.conduent.nationalhighways.utils.widgets.NHTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24dp"
                android:height="@dimen/_22dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/str_enquiry"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3dp"
                android:layout_marginTop="@dimen/margin_14dp"
                android:layout_marginBottom="3dp"
                android:elevation="@dimen/_3dp"
                android:minHeight="@dimen/_74dp"
                app:cardCornerRadius="@dimen/_5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutVehicleRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/txtReferenceNumber"
                        style="@style/MediumTextBlack"
                        android:text="@string/reference_number"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/referenceNumber"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="AJ66 MHA"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtReferenceNumber" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3dp"
                android:layout_marginBottom="@dimen/_3dp"

                android:elevation="@dimen/_3dp"
                android:minHeight="@dimen/_74dp"
                app:cardCornerRadius="@dimen/_5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardRecentCrossings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/txtCategory"
                        style="@style/MediumTextBlack"
                        android:text="@string/str_category"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/category"
                        style="@style/RegularTextBlack"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtCategory" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/emailCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3dp"
                android:layout_marginBottom="@dimen/_3dp"

                android:elevation="@dimen/_3dp"
                android:minHeight="@dimen/_74dp"
                app:cardCornerRadius="@dimen/_5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/txtSubcategory"
                        style="@style/MediumTextBlack"
                        android:text="@string/sub_category"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/creditAdditionalCrossings"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="left|center"
                        android:text="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtSubcategory" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3dp"
                android:layout_marginBottom="@dimen/_3dp"

                android:elevation="@dimen/_3dp"
                android:minHeight="@dimen/_74dp"
                app:cardCornerRadius="@dimen/_5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/txtDateAndTimeSubmitted"
                        style="@style/MediumTextBlack"
                        android:text="@string/date_time_submitted"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/dateAndTimeSubmitted"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="left|center"
                        android:text="8 Nov 2022 at 12:05 pm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtDateAndTimeSubmitted" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3dp"
                android:layout_marginBottom="@dimen/_3dp"

                android:elevation="@dimen/_3dp"
                android:minHeight="@dimen/_74dp"
                app:cardCornerRadius="@dimen/_5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/txtStatusOfEnquiry"
                        style="@style/MediumTextBlack"
                        android:text="@string/status_of_enquiry"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/statusOfEnquiry"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="left|center"
                        android:text="CLOSED"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtStatusOfEnquiry" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/labelPaymentAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3dp"
                android:layout_marginBottom="@dimen/_3dp"

                android:elevation="@dimen/_3dp"
                android:minHeight="@dimen/_74dp"
                app:cardCornerRadius="@dimen/_5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/txtdateEnquiryClose"
                        style="@style/MediumTextBlack"
                        android:text="@string/date_enquiry_closed"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/dateAndEnquiry"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="left|center"
                        android:text="31 Jan 2023 at 7:20am"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtdateEnquiryClose" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3dp"
                android:layout_marginBottom="@dimen/_3dp"
                android:minHeight="@dimen/_74dp"
                app:cardCornerRadius="@dimen/_5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15dp">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/txtLabelPaymentAmount"
                        style="@style/MediumTextBlack"
                        android:text="@string/date_time_submitted"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/paymentAmount"
                        style="@style/RegularTextBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="left|center"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtLabelPaymentAmount" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>