<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">


        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/tvTitle"
            style="@style/BoldText"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:gravity="center"
            android:text="@string/str_session_expired"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/tvDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:gravity="center"
            android:text="@string/str_your_security_signed_you_out"
            android:textColor="@color/dialog_title"
            android:textSize="@dimen/font_14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <com.conduent.nationalhighways.utils.widgets.NHTextView
            android:id="@+id/signin_tv"
            style="@style/BoldText"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:elevation="@dimen/margin_5dp"
            android:padding="@dimen/margin_8dp"
            android:text="@string/txt_sign_in"
            android:textColor="@color/blue_color"
            android:textSize="@dimen/font_16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>