<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:id="@+id/txtTitleTop"
            style="@style/MediumTextBlack"
            android:layout_width="match_parent"
            android:text="@string/additional_crossings_txt"
            android:textColor="@color/black" />

        <com.conduent.apollo.ui.CMDropDownView
            android:id="@+id/numberAdditionalCrossings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            app:labelText="@string/number_of_additional_crossings"
            android:padding="0dp"
            app:inputType="number"
            android:textColor="@color/black" />



        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:layout_width="match_parent"
            android:id="@+id/paymentCrossing"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            app:labelText="Payment Amount for additional crossings"
            app:inputType="numberDecimal"
            app:maxLength="15"
            android:maxLength="15"
            app:imeOptions="actionNext"
            android:textColor="@color/black"/>

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:layout_width="match_parent"
            android:id="@+id/recentCrossing"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            app:labelText="Payment Amount for recent crossings"
            app:inputType="numberDecimal"
            app:maxLength="15"
            android:maxLength="15"
            app:imeOptions="actionNext"
            android:textColor="@color/black"/>

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:layout_width="match_parent"
            android:id="@+id/totalAmount"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            app:labelText="Total Amount"
            app:inputType="numberDecimal"
            app:maxLength="15"
            android:maxLength="15"
            app:imeOptions="actionNext"
            android:textColor="@color/black"/>



        <TextView
            android:id="@+id/txtBottom"
            style="@style/MediumTextBlack"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="@string/how_many_payments_do_you_need_to_pay_for"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_crossing_is_a_single_journey"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:textColor="@color/grayColorIcon"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans" />

        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnNext"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_continue"
            app:radius="@dimen/margin_5dp" />


    </LinearLayout>
</layout>