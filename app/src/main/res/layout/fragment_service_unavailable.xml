<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/margin_30dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/margin_10dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_cl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="@dimen/margin_50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/title_tv"
                    style="@style/BoldText"
                    android:layout_width="match_parent"
                    android:drawableTop="@drawable/warningicon"
                    android:drawablePadding="@dimen/margin_20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/failed_retry_title"
                    android:textColor="@color/dark_blue_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/details_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:focusable="true"
                    android:paddingBottom="@dimen/margin_20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_tv">

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/decs1_tv"
                        style="@style/SemiBoldTextBlack_14sp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:gravity="center_horizontal"
                        android:text="@string/try_again_later_did_not_save_changes"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/decs2_tv"
                        style="@style/SemiBoldTextBlack_14sp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:text="@string/str_contact_dart_charge_contact_centre"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/decs1_tv" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/decs3_tv"
                        style="@style/SemiBoldTextBlack_14sp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:text="@string/str_contact_telephone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/decs2_tv" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/decs4_tv"
                        style="@style/SemiBoldTextBlack_14sp"
                        android:text="@string/str_contact_textphone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/decs3_tv" />

                    <com.conduent.nationalhighways.utils.widgets.NHTextView
                        android:id="@+id/decs5_tv"
                        style="@style/SemiBoldTextBlack_14sp"
                        android:text="@string/str_contact_every_day"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/decs4_tv" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/btnNext"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp"
                android:text="@string/back_to_main_menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:radius="@dimen/margin_5dp" />

            <com.conduent.nationalhighways.utils.widgets.NHButton
                android:id="@+id/btnGoToWebsite"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginBottom="@dimen/margin_60dp"
                android:text="@string/str_go_to_website"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:radius="@dimen/margin_5dp"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
