<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_16dp"
        android:paddingEnd="@dimen/margin_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_creation_choose_account"
            style="@style/MediumTextBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/chooseAccount"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chooseAccount"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/RegularTextBlack"
            android:id="@+id/txt_accountType"
            android:layout_marginTop="5dp"
            android:text="@string/account_creation_what_type_of_account"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/txt_accountType"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_30dp"
            android:id="@+id/radioGroup">
            
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/RegularTextBlack"
                android:text="@string/str_personal_account_description"
                android:padding="5dp"
                android:buttonTint="@color/new_btn_color"

                android:id="@+id/radio_personal_account"/>


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/RegularTextBlack"
                android:text="@string/str_personal_business_account_description"
                android:padding="5dp"
                android:layout_marginTop="30dp"
                android:buttonTint="@color/new_btn_color"
                android:id="@+id/radio_business_account"/>

        </RadioGroup>
        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnAccountType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_continue"
            style="@style/PrimaryButton"
            app:isEnabled="false"
            android:layout_marginTop="@dimen/margin_30dp"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>