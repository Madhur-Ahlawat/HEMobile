<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.conduent.nationalhighways.utils.widgets.NHTextView
        android:id="@+id/label_create_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:text="@string/change_your_password"
        app:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tf_enter_password"
        style="@style/Widget.HeMobile.TextInputLayout.Transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_26dp"
        android:hint="@string/txt_enter_password"
        android:theme="@style/Widget.HeMobile.TextInputLayout.Transparent"
        app:errorEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/label_create_password"
        app:passwordToggleEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_pwd"
            style="@style/AppEditTextTransparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text="@={model.password}"
            android:textSize="@dimen/_14ssp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tf_enter_confirm_password"
        style="@style/Widget.HeMobile.TextInputLayout.Transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_26dp"
        android:hint="@string/txt_enter_password"
        android:theme="@style/Widget.HeMobile.TextInputLayout.Transparent"
        app:errorEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/tf_enter_password"
        app:passwordToggleEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_confirm_pwd"
            style="@style/AppEditTextTransparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text="@={model.password}"
            android:textSize="@dimen/_14ssp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.conduent.nationalhighways.utils.widgets.NHButton
        android:id="@+id/continue_btn"
        style="@style/PrimaryButton"
        app:layout_constraintTop_toBottomOf="@+id/tf_enter_confirm_password"
        android:layout_marginHorizontal="@dimen/margin_26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_26dp"
        android:text="@string/str_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.conduent.nationalhighways.utils.widgets.NHTextView
        app:layout_constraintTop_toBottomOf="@+id/continue_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Your password must:"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginHorizontal="@dimen/margin_26dp"
        android:textSize="@dimen/margin_14dp"
        android:id="@+id/your_password_must"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>