<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isEnable"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_up_recommendation"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_2_of_5"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/llRecommendParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_30ssp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabel"
            android:layout_marginHorizontal="@dimen/_10ssp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/topUpCalculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7ssp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/top_up_calculate"
                android:textColor="@color/grey_two"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7ssp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/str_auto_top_up_my_account"
                android:textColor="@color/grey_two"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.HeMobile.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/enter_amount"
                app:boxStrokeColor="@color/color_00703C"
                app:endIconDrawable="@drawable/ic_screenshot__121__2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/topUpAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7ssp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/account_falls"
                android:textColor="@color/grey_two"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.HeMobile.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/enter_amount"
                app:boxStrokeColor="@color/color_00703C"
                app:endIconDrawable="@drawable/ic_screenshot__121__2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/topUpAmountFalls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/topUpCalculateRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15ssp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/top_up_calculate_recommend"
                android:textColor="@color/grey_two"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal" />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_business_topup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20ssp"
                android:text="@string/str_continue"
                android:textColor="@{isEnable==false?@color/color_7D7D7D:@color/white}"
                android:backgroundTint="@{isEnable==true?@color/btn_color:@color/color_C9C9C9}"
                android:enabled="@{isEnable}"
                android:textAllCaps="false"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>