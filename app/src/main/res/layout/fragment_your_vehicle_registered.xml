<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="18dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/SemiBoldText"
            android:textColor="@color/black"
            android:text="@string/where_is_your_vehicle_registered"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RadioGroup
            android:id="@+id/radioGroupYesNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/btnNext"
            app:layout_constraintStart_toStartOf="@+id/btnNext"
            android:layout_marginTop="@dimen/margin_15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleTop" >
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                style="@style/RadioButtonStyle"
                android:text="@string/str_in_the_uk"
                android:checked="false"
                android:id="@+id/radioButtonYes"
                android:layout_height="@dimen/margin_40dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:text="@string/str_outside_the_uk"
                style="@style/RadioButtonStyle"
                android:id="@+id/radioButtonNo"
                android:layout_height="@dimen/margin_40dp"/>

        </RadioGroup>


        <com.conduent.nationalhighways.utils.widgets.NHButton
            android:id="@+id/btnVehicleContinue"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_continue"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupYesNo"
            app:radius="5dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>