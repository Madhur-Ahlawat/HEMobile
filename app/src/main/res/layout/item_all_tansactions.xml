<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="item"
            type="com.conduent.nationalhighways.data.model.accountpayment.TransactionData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/header_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_E0E0E0"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingHorizontal="@dimen/margin_20dp"
            android:paddingVertical="@dimen/margin_4dp"
            android:text="@string/txt_dummy_date"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCrossings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_65dp"
            android:layout_marginTop="3dp"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/header_date"
            tools:itemCount="4"
            tools:listitem="@layout/item_crossings" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>