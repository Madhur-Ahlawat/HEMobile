<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

       <!-- <variable
            name="model"
            type="com.conduent.nationalhighways.data.model.auth.forgot.password.ConfirmOptionModel" />
-->
        <variable
            name="email"
            type="String" />
        <variable
            name="isValid"
            type="Boolean" />


            <variable
                name="model"
                type="com.conduent.nationalhighways.data.model.auth.forgot.email.LoginModel" />



    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingEnd="@dimen/margin_20dp"
        android:background="@color/white"
        >


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotPassword_email_screenHeading"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/sfsemibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
            android:id="@+id/edt_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            style="@style/input_text"
            app:maxLength="50"
            app:labelText="@string/global_email_address"
            app:inputType="text"
            app:imeOptions="actionDone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_details_txt" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:text="@string/createAccount_email_emailHint"
            app:layout_constraintTop_toBottomOf="@id/edt_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/text_username"
            />



        <com.conduent.apollo.ui.CMButton
            android:id="@+id/btn_next"
            android:layout_marginTop="@dimen/_20sdp"
            app:isEnabled="false"
            style="@style/PrimaryButton"
            android:text="@string/str_continue"
            app:layout_goneMarginTop="@dimen/margin_30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_username"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>