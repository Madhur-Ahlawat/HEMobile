<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.conduent.nationalhighways.data.model.tollrates.TollRatesResp" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:cardElevation="@dimen/margin_3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootDataCl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="yes"
            android:focusable="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dataCl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:paddingTop="@dimen/margin_20dp"
                android:paddingBottom="@dimen/margin_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_line_vertical1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:importantForAccessibility="no"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.38"
                    app:layout_constraintStart_toStartOf="parent" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_line_vertical3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:importantForAccessibility="no"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.61"
                    app:layout_constraintStart_toStartOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/value_type_ofVehicle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_21dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_2dp"
                    android:text="@{data.vehicleType}"
                    android:importantForAccessibility="no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guide_line_vertical1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Cars,\nMotorhomes,\nMinibuses" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/value_pay_as_you_go"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:importantForAccessibility="no"
                    android:gravity="center"
                    android:padding="@dimen/margin_2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/value_type_ofVehicle"
                    app:layout_constraintEnd_toStartOf="@id/guide_line_vertical3"
                    app:layout_constraintStart_toEndOf="@id/guide_line_vertical1"
                    app:layout_constraintTop_toTopOf="@id/value_type_ofVehicle"
                    tools:text="$2.50" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/value_prepay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:padding="@dimen/margin_2dp"
                    android:textColor="@color/black"
                    android:importantForAccessibility="no"
                    android:textSize="@dimen/font_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/value_pay_as_you_go"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guide_line_vertical3"
                    app:layout_constraintTop_toTopOf="@id/value_pay_as_you_go"
                    tools:text="$2.50" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2dp"
                android:background="@color/gray_707070"
                app:layout_constraintStart_toStartOf="parent"
                android:importantForAccessibility="no"
                app:layout_constraintTop_toBottomOf="@id/dataCl" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
