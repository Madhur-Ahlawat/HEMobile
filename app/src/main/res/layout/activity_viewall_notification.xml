<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/white"
        android:paddingBottom="@dimen/_12sdp">

        <include
            android:id="@+id/id_tool_bar_lyt"
            layout="@layout/tool_bar_with_title_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.conduent.nationalhighways.ui.customviews.CustomTextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:padding="@dimen/_8sdp"
            android:text="@string/str_high_priority_small"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_tool_bar_lyt" />

        <com.conduent.nationalhighways.ui.customviews.CustomTextView
            android:id="@+id/clear_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/_8sdp"
            android:text="@string/str_clear_selected"
            android:textColor="@color/green"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/category_title"
            app:layout_constraintEnd_toStartOf="@+id/select_all"
            app:layout_constraintStart_toEndOf="@+id/category_title"
            app:layout_constraintTop_toTopOf="@+id/category_title" />

        <com.conduent.nationalhighways.ui.customviews.CustomTextView
            android:id="@+id/select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/_8sdp"
            android:text="@string/select_all"
            android:textColor="@color/green"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/clear_selected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clear_selected" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notifications_all_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_EFEFEF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_title"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
