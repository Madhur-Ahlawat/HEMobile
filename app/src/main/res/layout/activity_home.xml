<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_cyan">

        <include
            android:id="@+id/id_tool_bar_lyt"
            layout="@layout/toolbar_lyt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pay_dart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="start"
            android:text="@string/str_pay_dart_ford_crossing"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/_11ssp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_tool_bar_lyt" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_title_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="start"
            android:text="@string/str_what_would_you_like_to_do"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_dart_txt" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white"
            android:gravity="start"
            android:id="@+id/radio_group"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_title_lyt">

            <!--  <com.google.android.material.card.MaterialCardView
                  android:layout_width="match_parent"
                  android:paddingStart="@dimen/_27sdp"
                  android:paddingEnd="@dimen/_10sdp"
                  android:backgroundTint="@color/white"
                  android:layout_height="@dimen/_35sdp">
  -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                android:id="@+id/id_create_account"
                android:text="@string/str_create_account"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <!--
                        </com.google.android.material.card.MaterialCardView>
            -->

            <!-- <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:paddingStart="@dimen/_27sdp"
                 android:paddingEnd="@dimen/_10sdp"
                 android:backgroundTint="@color/white"
                 android:layout_height="@dimen/_35sdp">
 -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                android:id="@+id/id_one_of_payment"

                android:text="@string/str_make_one_of_payment"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <!--  </com.google.android.material.card.MaterialCardView>
              <com.google.android.material.card.MaterialCardView
                  android:layout_width="match_parent"
                  android:paddingStart="@dimen/_27sdp"
                  android:paddingEnd="@dimen/_10sdp"
                  android:backgroundTint="@color/white"
                  android:layout_height="@dimen/_35sdp">
  -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                android:id="@+id/id_resolve_penalty"

                android:text="@string/str_resolve_penalty_charge"
                android:textColor="@color/black"

                android:textSize="@dimen/_13ssp" />


            <!-- </com.google.android.material.card.MaterialCardView>
             <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:paddingStart="@dimen/_27sdp"
                 android:paddingEnd="@dimen/_10sdp"
                 android:backgroundTint="@color/white"
                 android:layout_height="@dimen/_35sdp">
 -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                android:id="@+id/id_check_for_paid"

                android:text="@string/str_check_for_paid_crossing"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <!--  </com.google.android.material.card.MaterialCardView>
              <com.google.android.material.card.MaterialCardView
                  android:layout_width="match_parent"
                  android:paddingStart="@dimen/_27sdp"
                  android:paddingEnd="@dimen/_10sdp"
                  android:backgroundTint="@color/white"
                  android:layout_height="@dimen/_35sdp">
  -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                android:id="@+id/id_view_charges"

                android:text="@string/str_view_charges"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <!--
                        </com.google.android.material.card.MaterialCardView>
            -->


        </RadioGroup>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:gravity="center"
            android:id="@+id/btn_continue"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/str_continue"
            android:theme="@style/Theme.Button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:cornerRadius="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>