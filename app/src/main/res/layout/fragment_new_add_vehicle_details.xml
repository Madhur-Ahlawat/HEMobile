<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="Boolean" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_18dp"
            android:paddingEnd="@dimen/margin_20dp"
            android:paddingBottom="@dimen/margin_20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/we_need_more_information_about_your_vehicle"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <androidx.constraintlayout.widget.ConstraintLayout-->
            <!--                android:id="@+id/cardLayout"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="@dimen/margin_20dp"-->
            <!--                android:paddingBottom="10dp"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/title">-->


            <androidx.cardview.widget.CardView
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_1dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_1dp"
                android:layout_marginBottom="@dimen/margin_1dp"
                android:elevation="3dp"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="no"
                app:cardCornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:layout_marginBottom="@dimen/margin_15dp"
                    android:importantForAccessibility="no"
                    android:paddingLeft="@dimen/margin_15dp"
                    android:paddingRight="@dimen/margin_15dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_50dp"
                        android:focusable="true"
                        android:importantForAccessibility="yes"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txtVehicleRegistrationPlate"
                            style="@style/MediumTextBlack"
                            android:text="@string/vehicle_registration_number_plate"
                            android:textSize="@dimen/font_15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/vehiclePlateNumber"
                            style="@style/RegularTextBlack"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:textAllCaps="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtVehicleRegistrationPlate"
                            tools:text="@string/app_name" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <ImageView
                        android:id="@+id/editVehicle"
                        android:layout_width="@dimen/margin_48dp"
                        android:layout_height="@dimen/margin_48dp"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:contentDescription="@string/accessibility_edit"
                        android:padding="@dimen/margin_16dp"
                        android:importantForAccessibility="yes"
                        android:src="@drawable/edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!--            </androidx.constraintlayout.widget.ConstraintLayout>-->


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/vehicle_reg_tv"
                style="@style/input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25dp"
                android:visibility="gone"
                app:imeOptions="actionNext"
                app:inputType="text"
                app:labelText="@string/vehicle_reg_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardLayout"
                app:maxLength="50" />

            <com.conduent.apollo.ui.CMDropDownView
                android:id="@+id/typeVehicle"
                style="@style/input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25dp"
                app:labelText="@string/type_of_vehicle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_reg_tv" />

            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/makeInputLayout"
                style="@style/input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25dp"
                app:imeOptions="actionNext"
                app:inputType="text"
                app:labelText="@string/str_make"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/typeVehicle"
                app:maxLength="50" />

            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/modelInputLayout"
                style="@style/input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25dp"
                app:imeOptions="actionNext"
                app:inputType="text"
                app:labelText="@string/str_model"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/makeInputLayout"
                app:maxLength="50" />

            <com.conduent.nationalhighways.utils.widgets.NHTextInputCell
                android:id="@+id/colorInputLayout"
                style="@style/input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25dp"
                app:imeOptions="actionDone"
                app:inputType="text"
                app:labelText="@string/str_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/modelInputLayout"
                app:maxLength="50" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vehicleRegisteredLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/colorInputLayout"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTitleTop"
                    style="@style/SemiBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/country_registration"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <RadioGroup
                    android:id="@+id/radioGroupYesNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitleTop">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioButtonYes"
                        style="@style/RadioButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:minHeight="@dimen/margin_48dp"
                        android:text="@string/str_in_the_uk" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioButtonNo"
                        style="@style/RadioButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_48dp"
                        android:text="@string/str_outside_the_uk" />

                </RadioGroup>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBoxTerms"
                style="@style/CheckBoxStyle"
                android:layout_marginTop="@dimen/margin_25dp"
                android:gravity="top"
                android:minHeight="@dimen/margin_48dp"
                android:text="@string/i_confirm_that_the_vehicle_information_provided_is_correct"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicleRegisteredLayout" />

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/next_btn"
                style="@style/PrimaryButton"
                android:layout_marginTop="@dimen/margin_25dp"
                android:enabled="false"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/str_continue"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxTerms" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
