<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.inActive.InActiveNotSureFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/continueCl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="@dimen/margin_20dp">


                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_50dp"
                    android:drawableTop="@drawable/warningicon"
                    android:drawablePadding="@dimen/margin_23dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="@string/str_account_close_on"
                    android:textColor="@color/new_btn_color"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.conduent.nationalhighways.utils.widgets.NHTextView
                    android:id="@+id/descTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="left"
                    android:lineSpacingExtra="@dimen/margin_2dp"
                    android:text="@string/str_account_close_on_desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titleTv" />


                <LinearLayout
                    android:id="@+id/point1Ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:focusable="true"
                    android:importantForAccessibility="yes"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descTv">

                    <ImageView
                        android:id="@+id/img_dot1"
                        android:layout_width="@dimen/margin_7dp"
                        android:layout_height="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_7dp"
                        android:contentDescription="@string/accessibility_bullet"
                        android:src="@drawable/circle_5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/str_complete_crossing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/point2Ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:focusable="true"
                    android:importantForAccessibility="yes"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/point1Ll">

                    <ImageView
                        android:layout_width="@dimen/margin_7dp"
                        android:layout_height="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_7dp"
                        android:contentDescription="@string/accessibility_bullet"
                        android:src="@drawable/circle_5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/str_make_a_payment_or"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/point3Ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:focusable="true"
                    android:importantForAccessibility="yes"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/point2Ll">

                    <ImageView
                        android:layout_width="@dimen/margin_7dp"
                        android:layout_height="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_7dp"
                        android:contentDescription="@string/accessibility_bullet"
                        android:src="@drawable/circle_5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/str_opt_in_another_12_months"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/continueCl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:padding="@dimen/margin_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/btnContinue"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/str_continue"
                android:textSize="@dimen/font_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>