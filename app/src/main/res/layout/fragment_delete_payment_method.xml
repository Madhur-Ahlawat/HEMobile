<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="18dp"
            android:paddingEnd="20dp"
            android:paddingBottom="18dp"
            tools:context=".ui.account.creation.newAccountCreation.MaximumVehicleNumberFragment">

            <ImageView
                android:id="@+id/warningIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/warningicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/maximumVehicleAdded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/str_you_are_removing_all_the_payments_method"
                android:textColor="@color/new_btn_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/warningIcon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/maximumVehicleAdded"
                android:text="@string/str_your_balance_will_no_longer_available"
                android:lineSpacingExtra="3dp"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:layout_marginTop="17dp"
                android:textSize="14sp"
                android:id="@+id/textMaximumVehicle" />



            <com.conduent.apollo.ui.CMButton
                style="@style/PrimaryButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textMaximumVehicle"
                android:text="@string/delete"
                android:layout_marginTop="@dimen/margin_60dp"
                android:id="@+id/btnContinue"/>

            <com.conduent.apollo.ui.CMButton
                style="@style/secondaryButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnContinue"
                android:text="@string/str_cancel"
                android:id="@+id/cancel_btn"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/margin_30dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>