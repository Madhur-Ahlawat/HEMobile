<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_18dp"
            android:paddingEnd="@dimen/margin_20dp"
            android:paddingBottom="@dimen/margin_18dp"
            tools:context=".ui.account.creation.newAccountCreation.MaximumVehicleNumberFragment">


            <TextView
                android:id="@+id/maximumVehicleAdded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_60dp"
                android:drawablePadding="@dimen/margin_23dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:text="@string/str_you_are_removing_all_the_payments_method"
                android:textColor="@color/new_btn_color"
                android:textSize="@dimen/font_16sp"
                app:drawableTopCompat="@drawable/warningicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textMaximumVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_17dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/margin_3dp"
                android:text="@string/str_your_balance_will_no_longer_available"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14sp"
                app:layout_constraintTop_toBottomOf="@id/maximumVehicleAdded" />


            <com.conduent.apollo.ui.CMButton
                android:id="@+id/btnContinue"
                style="@style/PrimaryButton"
                android:layout_marginTop="@dimen/margin_60dp"
                android:text="@string/delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textMaximumVehicle" />

            <com.conduent.apollo.ui.CMButton
                android:id="@+id/cancel_btn"
                style="@style/secondaryButton"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:text="@string/str_cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnContinue" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>