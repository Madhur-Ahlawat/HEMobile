<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HEMobileDark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btn_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/tool_bar_clr</item>
    </style>
    <style name="Theme.HEMobileLight" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/btn_color</item>
        <item name="colorPrimaryDark">@color/add_stroke_clr</item>
        <item name="colorOnPrimary">@color/btn_color</item>
        <item name="colorOnSurface">@color/btn_color</item>
        <item name="colorAccent">@color/btn_color</item>
        <item name="colorControlNormal">@color/btn_color</item>
        <item name="colorControlActivated">@color/add_stroke_clr</item>
        <item name="colorControlHighlight">@color/add_stroke_clr</item>
    </style>
    <style name="Theme.ToolBar" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="Theme.Button" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/button_shadow</item>
    </style>
</resources>