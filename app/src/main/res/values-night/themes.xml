<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HEMobileDark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/tool_bar_clr</item>
    </style>

    <style name="Theme.HEMobileLight" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/btn_color</item>
        <item name="colorPrimaryDark">@color/add_stroke_clr</item>
        <item name="colorOnPrimary">@color/btn_color</item>
        <item name="colorOnSurface">@color/btn_color</item>
        <item name="colorAccent">@color/btn_color</item>
        <item name="colorControlNormal">@color/btn_color</item>
        <item name="colorControlActivated">@color/add_stroke_clr</item>
        <item name="colorControlHighlight">@color/add_stroke_clr</item>
    </style>

    <style name="Theme.ToolBar" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Button" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/button_shadow</item>
        <item name="colorButtonNormal">@color/grey_two</item>
        <item name="colorControlActivated">@color/btn_color</item>
        <item name="backgroundTint">@color/color_C9C9C9</item>
        <item name="android:height">@dimen/_40sdp</item>
    </style>

    <style name="Theme.HEMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.HeMobile.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.HeMobile.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">@color/grey_two</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/grey_two</item>

    </style>

    <style name="TextAppearance.HeMobile.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ios_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ios_type_dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>