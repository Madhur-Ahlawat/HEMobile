<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_account_creation"
    app:startDestination="@id/emailVerification">
    <fragment
        android:id="@+id/emailVerification"
        android:name="com.heandroid.ui.account.creation.EmailVerificationFragment"
        android:label="@string/str_email_verification"
        tools:layout="@layout/fragment_email_verification">
        <action
            android:id="@+id/actionEmailVerification_to_AccountTypeSelection"
            app:destination="@id/accountTypeSelectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountTypeSelectionFragment"
        android:name="com.heandroid.ui.account.creation.AccountTypeSelectionFragment"
        android:label="@string/str_select_account_type"
        tools:layout="@layout/fragment_account_type_selection">
        <action
            android:id="@+id/actionAccountSelectionType_to_PersonalDetailsEntry"
            app:destination="@id/personalDetailsEntryFragment" />
    </fragment>


    <fragment
        android:id="@+id/personalDetailsEntryFragment"
        android:name="com.heandroid.ui.account.creation.PersonalDetailsEntryFragment"
        android:label="@string/str_personal_details_entry"
        tools:layout="@layout/fragment_personal_details_entry">
    </fragment>

    <fragment
        android:id="@+id/cardFragment"
        android:name="com.heandroid.ui.account.creation.CreateAccountCardFragment"
        android:label="Card Fragment"
        tools:layout="@layout/fragment_create_account_card">
        <action
            android:id="@+id/action_cardFragment_to_successfulFragment"
            app:destination="@id/successfulFragment" />
    </fragment>

    <fragment
        android:id="@+id/successfulFragment"
        android:name="com.heandroid.ui.account.creation.CreateAccountSuccessfulFragment"
        android:label="Successfull Fragment"
        tools:layout="@layout/fragment_create_account_successful"/>


</navigation>