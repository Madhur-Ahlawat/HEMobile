<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_landing"
    app:startDestination="@id/startNow">
    <fragment
        android:id="@+id/startNow"
        android:name="com.heandroid.ui.landing.StartNowFragment"
        android:label="@string/str_start_now"
        tools:layout="@layout/fragment_start_now">

        <action
            android:id="@+id/action_startNow_to_landingFragment"
            app:destination="@id/landingFragment" />
    </fragment>

    <fragment
        android:id="@+id/landingFragment"
        android:name="com.heandroid.ui.landing.LandingFragment"
        android:label="@string/str_landing_screen"
        tools:layout="@layout/fragment_landing">

    </fragment>

    <fragment
        android:id="@+id/logoutFragment"
        android:name="com.heandroid.ui.landing.LogoutFragment"
        android:label="@string/str_log_out"
        tools:layout="@layout/fragment_logout">
        <action
            android:id="@+id/action_logoutFragment_to_startNow"
            app:destination="@id/startNow"
            app:popUpTo="@id/nav_graph_landing"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/sessionTimeOutFragment"
        android:name="com.heandroid.ui.landing.SessionExpireFragment"
        android:label="@string/str_session_time_out"
        tools:layout="@layout/fragment_session_expire" />

</navigation>