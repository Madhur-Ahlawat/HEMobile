<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heandroid">

    <application
        android:name="com.heandroid.config.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HEMobile"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.ActivityHome"
            android:theme="@style/Theme.HEMobile">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".view.DashboardPage" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.VehicleMgmtActivity" />
        <activity android:name=".view.ActivityPaymentHistory" />
        <activity android:name=".view.RecoveryUsernamePasswordActivity" />
        <activity android:name=".view.ForgotPasswordActivity" />
        <activity android:name=".view.ForgotPasswordRecoverActivity" />
        <activity android:name=".view.ForgotPasswordSentActivity" />
        <activity android:name=".view.PasswordResetActivity" />
        <activity android:name=".view.MakeOneOffPaymentActivity" />
        <activity android:name=".view.ConfirmPaymentActivity"/>
        <activity android:name=".view.PaymentMethodSelectionActivity"/>
        <activity android:name=".view.QuickPaymentMethodSelectionActivity"/>
        <activity android:name=".view.PayNowActivity"/>
        <activity android:name=".view.PaymentConfirmationActivity"/>

        <activity
            android:name=".view.OneOfPayment"
            android:theme="@style/Theme.HEMobileLight" />
        <activity
            android:name=".view.PaymentStartPage"
            android:theme="@style/Theme.HEMobileLight" />
        <activity
            android:name=".view.VehicleDetailActivity"
            android:theme="@style/Theme.HEMobileLight" />
        <activity android:name=".view.PaymentReceiptSelectionActivity"/>
        <activity
            android:name=".view.ActivityFutureCrossing"
            android:theme="@style/Theme.HEMobileLight" >


        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
