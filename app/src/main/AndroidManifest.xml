<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.conduent.nationalhighways">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".ui.base.BaseApplication"
        android:allowBackup="false"
        android:debuggable="false"
        android:icon="@mipmap/appicon"
        android:label="@string/app_name"
        android:resizeableActivity="false"
        android:roundIcon="@mipmap/appicon_round"
        android:theme="@style/Theme.HEMobile"
        android:usesCleartextTraffic="true"
        tools:ignore="HardcodedDebugMode">
        <activity
            android:name=".ui.bottomnav.account.raiseEnquiry.EnquiryStatusActivity"
            android:exported="false" />
        <activity
            android:name=".ui.bottomnav.account.raiseEnquiry.RaiseEnquiryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.bottomnav.account.close_account.CloseAccountSuccessActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.account.biometric.BiometricActivity"
            android:exported="false" />
        <activity
            android:name=".ui.landing.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.bottomnav.dashboard.topup.ManualTopUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileWhite" />
        <activity
            android:name=".ui.startNow.StartNowBaseActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.auth.controller.AuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreateAccount" />
        <activity
            android:name=".ui.account.profile.password.ProfilePasswordChangeSuccessActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreateAccount" />
        <activity
            android:name=".ui.auth.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileDark" />
        <activity
            android:name=".ui.landing.LandingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileDark" />
        <activity
            android:name=".ui.vehicle.VehicleMgmtActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobile" />
        <activity
            android:name=".ui.bottomnav.HomeActivityMain"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileDark"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.viewcharges.ViewChargesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreateAccount" />
        <activity
            android:name=".ui.futureModule.InProgressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.account.creation.controller.CreateAccountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreateAccount"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.account.profile.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileWhite" />
        <activity
            android:name=".ui.bottomnav.notification.NotificationViewAllActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.startNow.contactdartcharge.ContactDartChargeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.startNow.guidancedocuments.GuidanceAndDocumentsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.payment.MakeOffPaymentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileWhite" />
        <activity
            android:name=".ui.bottomnav.account.payments.AccountPaymentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileWhite" />
        <activity
            android:name=".ui.vehicle.vehiclegroup.VehicleGroupMgmtActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileWhite" />
        <activity
            android:name=".ui.bottomnav.account.accountstatements.AccountStatementActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileWhite" />
        <activity
            android:name=".ui.checkpaidcrossings.CheckPaidCrossingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HEMobileWhite" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <service
            android:name=".service.DartChargeFCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".receiver.NotificationBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".receiver.BootCompleteReceiver"
            android:exported="false"
            android:protectionLevel="signature">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>